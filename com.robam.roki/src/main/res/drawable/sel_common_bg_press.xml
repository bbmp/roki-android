<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <!-- 实心 -->
            <solid android:color="#88e3e3e3"/>
            <!-- 圆角 -->
            <corners android:radius="6dp"/>
            <!-- 边距 -->
            <padding
                android:top="6dp"
                android:bottom="6dp"
                android:left="12dp"
                android:right="12dp"/>
        </shape>

    </item>
</selector>