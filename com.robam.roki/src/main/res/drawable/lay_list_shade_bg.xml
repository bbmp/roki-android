<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--第一层阴影-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0c1e1e1e" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!--第二层前景-->
    <item
        android:bottom="3dp"
        android:left="1dp"
        android:right="1dp"
        android:top="0dp">

        <shape android:shape="rectangle">

            <!-- 实心 -->
            <solid android:color="@color/white" />
            <!-- 边框 -->
            <stroke
                android:width="2dp"
                android:color="@color/white" />
            <!-- 圆角 -->
            <corners android:radius="10dp" />
            <!-- 边距 -->
            <padding
                android:top="0dp"
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp" />

        </shape>
    </item>
</layer-list>