<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_device_notice_dialog_bg"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="12dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingLeft="27dp"
        android:paddingRight="27dp" >

        <ImageView
            android:id="@+id/imgTip"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginRight="21dp"
            android:contentDescription="@null"
            android:src="@mipmap/ic_notic_tip1"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="灶具内部故障，请申请售后"
            android:textColor="@color/White"
            android:textSize="29sp" />

        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="温馨提示：请把锅放置在灶具上；或者尝试调整锅的位置；请使用电磁灶匹配锅"
            android:textColor="@color/White"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="30dp"
        android:id="@+id/pnlButton"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="33dp"
        android:background="@color/White"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgBtnIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="21dp"
            android:contentDescription="@null"
            android:src="@mipmap/ic_notic_phone"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtBtnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="95105855"
            android:textColor="#5593fb"
            android:textSize="31sp" />
    </LinearLayout>

</LinearLayout>