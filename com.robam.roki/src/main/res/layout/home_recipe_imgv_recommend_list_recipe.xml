<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="vertical">
    <!--图片和图标-->
    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_default"/>

    <!--文字描述和收藏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/iv_img"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <!--菜名-->
        <TextView
            android:id="@+id/home_recipe_tv_recipename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无名称"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <!--收藏-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/home_recipe_tv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(0)"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
    <!--菜谱头标标示-->
    <LinearLayout
        android:id="@+id/home_recipe_ll_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_img"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-30dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_recipe_head_ic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_recipe_headicon_roki" />

        <TextView
            android:id="@+id/home_recipe_head_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="roki"
            android:textSize="10sp" />

    </LinearLayout>
</RelativeLayout>