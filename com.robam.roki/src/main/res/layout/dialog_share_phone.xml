<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/shape_dialog_bg"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="@dimen/dp_27"
        android:textSize="@dimen/sp_24"
        android:textColor="#333"
        android:gravity="center"
        android:text="请输入Roki用户手机号"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:maxLines="1"
        android:maxLength="11"
        android:paddingLeft="@dimen/dp_15"
        android:hint="请输入手机号"
        android:textColor="#000000"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/shape_input_curve_et"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_marginRight="@dimen/dp_21"
        android:id="@+id/dialog_share_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"/>
    <Button
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_60"
        android:background="@drawable/shape_icon_save_bg"
        android:textSize="@dimen/sp_24"
        android:textColor="#333"
        android:id="@+id/dialog_share_confirm"
        android:text="确定分享"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginBottom="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_60"
        android:background="@drawable/shape_icon_bg_radius_23"
        android:textSize="@dimen/sp_24"
        android:textColor="#333"

        android:id="@+id/dialog_share_cancel"
        android:text="取消"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>