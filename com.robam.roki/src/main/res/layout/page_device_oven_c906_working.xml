<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!--标题部分-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:paddingLeft="14dp"
        android:paddingRight="4dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/img_micro526_return"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/device_remote_control"
            android:textColor="#5D5D5D"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_water"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@mipmap/device_img_water_tank_gr"/>

    </RelativeLayout>
    <!--主体部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="@color/c03"
        android:orientation="vertical">
        <!--上层温度时间部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp">
            <!--上一层-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <!--设置上温度-->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom">

                            <TextView
                                android:id="@+id/tv_working_settemp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="35dp"
                                android:layout_marginRight="15dp"
                                android:background="@color/white"
                                android:rotation="30" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_working_settemp_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/temp"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="°C"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                    </LinearLayout>

                </FrameLayout>

                <View
                    android:id="@+id/v_working_view1"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="#505050"
                    android:visibility="gone" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="#505050" />


                <!--设置时间-->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom">

                            <TextView
                                android:id="@+id/tv_working_settime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="35dp"
                                android:layout_marginRight="15dp"
                                android:background="@color/white"
                                android:rotation="30" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/time"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_min"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="min"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                    </LinearLayout>


                </FrameLayout>
            </LinearLayout>
            <!--中间线-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_working_view3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="#505050" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="#505050" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_working_view4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="#505050" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="#505050" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="#505050" />
                </LinearLayout>
            </LinearLayout>
            <!--下一层-->
            <LinearLayout
                android:id="@+id/ll_working_pause"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <!--实时上温度-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_working_real_temp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="26sp" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_working_img_pauseic2"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="-5dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/img_oven_reset_button_yellow"
                    android:visibility="gone" />

                <View
                    android:id="@+id/v_working_view2"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="#505050"
                    android:visibility="gone" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="#505050" />
                <!--实时时间-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_working_real_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="26sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_working_img_pauseic1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="-5dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/img_oven_reset_button_yellow"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
        <!--中间部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">
            <!--中间framlayout-->
            <FrameLayout
                android:id="@+id/fl_working_middle"
                android:layout_width="235dp"
                android:layout_height="235dp"
                android:layout_gravity="center_horizontal">
                <!--圆圈部分-->
                <ImageView
                    android:id="@+id/iv_working_img_circle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@mipmap/img_order_run" />
                <!--圆圈内容-->
                <LinearLayout
                    android:id="@+id/ll_working_midcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.3">
                        <!--文字-->
                        <TextView
                            android:id="@+id/tv_working_circleabove"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom|center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:orientation="vertical">
                        <!--图片-->
                        <ImageView
                            android:id="@+id/iv_working_img_circledown"
                            android:layout_width="150dp"
                            android:layout_height="125dp"
                            android:layout_gravity="center_horizontal|top"
                            android:scaleType="centerInside" />

                        <TextView
                            android:id="@+id/tv_working_circledown"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:gravity="center|bottom"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
                <!--圆圈部分-->
                <ImageView
                    android:id="@+id/iv_working_img_pause"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.65"
                    android:scaleType="centerInside"
                    android:src="@mipmap/img_oven_pause"
                    android:visibility="gone" />
                <!--完成状态-->
                <ImageView
                    android:id="@+id/iv_working_img_finish"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@mipmap/img_oven_finish"
                    android:visibility="gone" />
                <!--完成文字-->
                <TextView
                    android:id="@+id/tv_working_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="50dp"
                    android:text="@string/device_finish"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_one"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="@string/c906_other_step_one"
                android:visibility="gone"
                android:textColor="@color/gray"
                android:background="@drawable/shape_c906_other_btn"/>


            <Button
                android:id="@+id/btn_two"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/gray"
                android:text="@string/c906_other_step_two"
                android:visibility="gone"
                android:background="@drawable/shape_c906_other_btn"/>
            <Button
                android:id="@+id/btn_there"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="@color/gray"
                android:text="@string/c906_other_step_there"
                android:visibility="gone"
                android:background="@drawable/shape_c906_other_btn"/>


        </LinearLayout>

        <!--下层-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2">
            <!--灯控-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <FrameLayout
                    android:id="@+id/fr_working_light"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="12dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:id="@+id/iv_working_img_light_circle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        android:src="@mipmap/img_steamoven_circle_open_small" />

                    <ImageView
                        android:id="@+id/iv_working_img_light"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_fan8700_light_white" />

                </FrameLayout>
            </LinearLayout>
            <!--旋转-->

            <!--开关-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <!--ic_device_oven_leanline_yellow-->
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />


                <LinearLayout
                    android:id="@+id/ll_working_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="18dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_working_img_switch"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_device_finish_circle" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
