<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/shape_dialog_bg"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_marginTop="@dimen/dp_43"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#333333"
            android:textSize="@dimen/sp_24"
            android:layout_weight="1"
            android:id="@+id/dialog_choose_temperature"
            android:gravity="center"
            android:text="温度"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="gone"
            android:textColor="#333333"
            android:textSize="@dimen/sp_24"
            android:layout_weight="1"
            android:id="@+id/dialog_choose_time_title"
            android:gravity="center"
            android:text="时间"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/dp_31"
        android:id="@+id/dialog_choose_time_dialog"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <com.contrarywind.view.WheelView
            android:id="@+id/dialog_choose_time_min"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.contrarywind.view.WheelView

            android:visibility="gone"
            android:id="@+id/dialog_choose_time_sec"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <Button

        android:id="@+id/dialog_choose_time_save"
        style="@style/style_button_confirm"

        android:textColor="#333333"
        android:textSize="@dimen/sp_24"
        android:background="@drawable/shape_icon_save_bg"
        android:text="保存"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        style="@style/style_button_cancel"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/shape_icon_bg_radius_23"
        android:textColor="#333333"
        android:textSize="@dimen/sp_24"
        android:id="@+id/dialog_choose_time_cancel"
        android:text="取消"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>