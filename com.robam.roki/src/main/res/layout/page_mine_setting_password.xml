<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mine_background"
    android:orientation="vertical">
    <View
        android:id="@+id/status_bar_fix"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white" />
    <com.hjq.bar.TitleBar app:drawableSize="25dp"
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:barStyle="transparent"
        android:background="#ffffff"
        app:titleColor="@color/mine_text_color"
        app:leftIcon="@mipmap/icon_back_black"
        app:rightSize="18sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:textColor="#CCCCCC"
            android:background="@drawable/bind_phone_background_2"
            android:textSize="12sp"
            android:textStyle="bold|italic"
            android:text="1" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#CCCCCC"
            android:textSize="15sp"
            android:layout_marginStart="5dp"
            android:text="验证手机号" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:textColor="@color/mine_text_color"
            android:background="@drawable/bind_phone_background"
            android:textSize="12sp"
            android:textStyle="bold|italic"
            android:text="2" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mine_text_color"
            android:textSize="15sp"
            android:layout_marginStart="5dp"
            android:text="设置密码" />
    </LinearLayout>

    <com.robam.roki.ui.widget.view.PasswordEditText
        android:id="@+id/et_password_new1"
        style="@style/EditTextStyle"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/change_password_2"
        android:background="@color/white"
        android:imeOptions="actionDone"
        android:maxLength="20"
        android:singleLine="true"
        android:paddingStart="15dp"
        tools:ignore="RtlSymmetry"/>


    <com.robam.roki.ui.widget.view.PasswordEditText
        android:id="@+id/et_password_new_2"
        style="@style/EditTextStyle"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/change_password_3"
        android:background="@color/white"
        android:imeOptions="actionDone"
        android:maxLength="20"
        android:singleLine="true"
        android:paddingStart="15dp"
        tools:ignore="RtlSymmetry"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_complete"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="35dp"
        android:text="@string/login_set_complete" />
</LinearLayout>
