<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_abs_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/home_recipe_live_imgv_return"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:scaleType="centerInside"
            android:clickable="true"
            android:src="@drawable/ic_return_selector_01" />

        <LinearLayout
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_arw_left"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:src="@mipmap/img_arw_left"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:visibility="gone"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/home_recipe_live_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#020204"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_arw_right"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:src="@mipmap/img_arw_right"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:visibility="gone"
                android:scaleType="centerInside"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/listview_titlebar_ll_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

        </LinearLayout>
    </RelativeLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/home_recipe_ll_livelist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000">

    </com.handmark.pulltorefresh.library.PullToRefreshListView>


</LinearLayout>