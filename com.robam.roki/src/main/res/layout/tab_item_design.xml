<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingHorizontal="@dimen/dp_10"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/tv_tab_design_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_12"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/text_color_device_category"
        tools:text="我是标签" />

    <View
        android:id="@+id/v_tab_design_line"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_2"
        android:layout_alignStart="@id/tv_tab_design_title"
        android:layout_alignEnd="@id/tv_tab_design_title"
        android:layout_alignBottom="@id/tv_tab_design_title"
        android:background="@color/cook_chart_blue" />

</RelativeLayout>