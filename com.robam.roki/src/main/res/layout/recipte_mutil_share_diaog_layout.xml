<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:id="@+id/rl_share_recipe"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/dialog_recipe_dialog"
        android:textColor="#333333"
        android:textSize="@dimen/sp_20"
        android:text="多段烹饪"
        android:layout_marginTop="@dimen/dp_23"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/dialog_recipe_icon"
        android:layout_width="@dimen/dp_31"
        android:layout_height="@dimen/dp_31"
        android:layout_below="@+id/dialog_recipe_dialog"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@drawable/headportrait_wdl" />

    <TextView
        android:id="@+id/dialog_recipe_name_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_recipe_dialog"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_23"
        android:layout_toRightOf="@+id/dialog_recipe_icon"
        android:text="CIV"
        android:textColor="#FF333333"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/dialog_recipe_date_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_72"
        android:paddingRight="@dimen/dp_18"
        android:text="2021/12/06"
        android:textColor="#FF333333"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/dialog_recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_recipe_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sp_28"
        android:text="烤面包"
        android:textColor="#FF333333"
        android:textSize="@dimen/sp_20" />

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/dialog_recipe_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_recipe_name"
        android:layout_marginTop="@dimen/dp_28" />

    <ImageView
        android:id="@+id/dialog_recipe_device_img"
        android:layout_width="@dimen/dp_114"
        android:layout_height="@dimen/dp_114"
        android:layout_below="@+id/dialog_recipe_step"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@mipmap/device_920_image"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/dialog_recipe_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_recipe_device_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:text="大厨蒸烤炸一体机·DB610"
        android:textColor="#FF333333" />
    <View
        android:layout_marginTop="@dimen/dp_24"
        android:layout_below="@+id/dialog_recipe_device_name"
        android:background="#1AA5A5A5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_39"
        android:layout_below="@+id/dialog_recipe_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dialog_recipe_qccode"
            android:layout_width="@dimen/dp_59"
            android:layout_height="@dimen/dp_59"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_toRightOf="@+id/dialog_recipe_qccode"
            android:text="扫二维码查看更多美食"
            android:textColor="#FF333333" />
        <ImageView
            android:src="#FFC4C4C4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:src="@mipmap/roki_user" />
    </RelativeLayout>
</RelativeLayout>