<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5f97fa">


    <LinearLayout
        android:id="@+id/waterfilter_bottom"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/img_waterpurifier_filterbottom"
        android:orientation="vertical">

        <!-- ROBAM老板 官网购买 -->
        <!-- RO 红色文字 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/waterfilter_ro_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="51dp"
                android:text="@string/ro_3_4"
                android:textColor="#ff0000"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/water_btn_buy"
                android:layout_width="171dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/img_robam_red"
                android:visibility="invisible"/>

        </LinearLayout>
        <!-- 电话购买 -->

        <Button
            android:id="@+id/btn_telephone"
            android:layout_width="171dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="#ff0000"
            android:gravity="center"
            android:text="电话购买"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <!-- 标题栏 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="top"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/waterpurifiy_lvxin_return"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@mipmap/img_waterpurifiy_return" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:text="滤芯状态"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/waterfiliter_install"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:text="安装说明"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </RelativeLayout>
        <!-- 中间的滤棒 -->


        <LinearLayout
            android:id="@+id/waterfiliter_purebar"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginTop="35dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="87dp"
            android:paddingRight="87dp">

            <!-- PP -->

            <LinearLayout
                android:id="@+id/waterfiliter_pp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/water_lvxin_first"
                    android:layout_width="38dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@mipmap/img_waterpurifier_filterblue"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/waterfiliter_pp_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="55dp"
                        android:text="1"
                        android:textColor="@color/water_lv"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/waterfiliter_pp_eng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:text="PP"
                        android:textColor="@color/water_lv"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/water_lvxin_and1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="+"
                        android:textColor="@color/water_lv"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/water_lvxin_cto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="CTO"
                        android:textColor="@color/water_lv"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/water_lvxin_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/water_lvxin_precent_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/water_lv"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/water_lvxin_precent01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textColor="@color/water_lv"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
            <!-- CTO -->

            <LinearLayout
                android:id="@+id/waterfiliter_cto"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/water_lvxin_second"
                    android:layout_width="38dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@mipmap/img_waterpurifier_filterblue"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/waterfiliter_cto_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="55dp"
                        android:text="2"
                        android:textColor="@color/water_lv"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/waterfiliter_cto_eng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:text="CTO"
                        android:textColor="@color/water_lv"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/water_lvxin_and2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="+"
                        android:textColor="@color/water_lv"
                        android:textSize="16sp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/water_lvxin_PP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="PP"
                        android:visibility="gone"
                        android:textColor="@color/water_lv"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/water_lvxin_precent_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/water_lv"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/water_lvxin_precent_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textColor="@color/water_lv"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
            <!-- RO1 -->

            <LinearLayout
                android:id="@+id/waterfiliter_ro1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/water_lvxin_third"
                    android:layout_width="38dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@mipmap/img_waterpurifier_filterblue"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/waterfiliter_ro1_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="55dp"
                        android:text="3"
                        android:textColor="@color/water_lv"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/waterfiliter_ro1_eng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="34dp"
                        android:text="RO"
                        android:textColor="@color/water_lv"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/water_lvxin_precent_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/water_lv"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/water_lvxin_precent_third"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textColor="@color/water_lv"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>
            <!-- RO2 -->

            <LinearLayout
                android:id="@+id/waterfiliter_ro2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/water_lvxin_four"
                    android:layout_width="38dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@mipmap/img_waterpurifier_filterblue"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/waterfiliter_ro2_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="55dp"
                        android:text="4"
                        android:textColor="@color/water_lv"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/waterfiliter_ro2_eng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="34dp"
                        android:text="RO"
                        android:textColor="@color/water_lv"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/water_lvxin_precent_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/water_lv"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/water_lvxin_precent_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textColor="@color/water_lv"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- 铝棒信息 -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:id="@+id/ll_point_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shape_point_selected" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/waterpurifier_lvxin_descs"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </androidx.viewpager.widget.ViewPager>

        </LinearLayout>


