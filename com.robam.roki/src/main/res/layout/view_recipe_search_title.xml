<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:background="@color/White"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_return"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="14dp"
        android:src="@drawable/icon_left_recipe" />

    <LinearLayout
        android:id="@+id/layoutSearch"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:background="@drawable/shape_conner_recipe_search_bg"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="@null"
            android:src="@mipmap/ic_recipe_search"/>

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:ems="10"
            android:layout_weight="1"
            android:focusable="true"
            android:inputType="text|textMultiLine"
            android:focusableInTouchMode="true"
            android:hint="@string/search_hint"
            android:textColorHint="@color/roki_tips_text_color"
            style="@style/RokiMainText"
            android:imeOptions="actionSearch">

            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/iv_delete_search_word"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_cancel_24"
            android:scaleType="fitCenter"
            android:gravity="center"
            android:visibility="invisible"
            android:paddingStart="12dp"
            android:paddingEnd="20dp" />
    </LinearLayout>


</LinearLayout>