<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_bg_white_15dp"
    android:layout_marginStart="13dp"
    android:layout_marginEnd="13dp"
    android:layout_marginTop="10dp"
    >

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iv_select"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/ic_order_recipe_normal"
                    android:layout_marginLeft="20dp" />
                <TextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="我的多段（默认）"
                    android:textSize="18sp"
                    android:layout_marginLeft="8dp"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="50min"
                    android:textSize="15sp"
                    android:drawableRight="@drawable/icon_more"
                    android:drawablePadding="4dp"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_610_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/tv_show"
                android:layout_width="64dp"
                android:layout_height="24dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="分享"
                android:textSize="15sp"
                android:drawablePadding="4dp"
                android:background="@drawable/shape_bg_f2b33e_12"
                android:visibility="gone"
                android:layout_gravity="right"
                android:layout_marginRight="16dp"
                android:layout_marginTop="-36dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_del"
            android:visibility="gone"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:background="@drawable/shape_bg_white_15dp_right"
            android:textSize="15sp"
            android:gravity="center"
            android:text="删除"/>
        <!--    <TextView-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="1dp"-->
        <!--        android:background="#D7D7D7"/>-->

    </LinearLayout>

</RelativeLayout>