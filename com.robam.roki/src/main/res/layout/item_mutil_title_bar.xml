<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"

    android:background="@color/steam_work_item_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/mutil_step_1"
        android:paddingBottom="@dimen/dp_2"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_8"
        android:background="@drawable/shape_mutil_title_select_bg"
        android:textColor="@color/text_select_color"
        android:textSize="@dimen/sp_12"
        android:text="第一段"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="@dimen/dp_24"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/mutil_step_2"
        android:paddingBottom="@dimen/dp_2"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_8"
        android:background="@drawable/shape_mutil_title_select_bg"
        android:textColor="@color/text_select_color"
        android:textSize="@dimen/sp_12"
        android:text="第二段"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/text_color_device"
        android:layout_width="@dimen/dp_24"
        android:layout_height="wrap_content"/>
    <TextView

        android:id="@+id/mutil_step_3"
        android:paddingBottom="@dimen/dp_2"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_8"
        android:background="@drawable/shape_mutil_title_select_bg"
        android:textColor="@color/text_select_color"
        android:textSize="@dimen/sp_12"
        android:text="第三段"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>