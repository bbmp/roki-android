<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_259"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_dialog_bg">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_80"
        android:text="定时换气，持续60min"
        android:textColor="@color/text_color_device_category"
        android:textSize="@dimen/sp_20" />


    <LinearLayout
        android:id="@+id/ll_botton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_28"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/dp_166"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_device_category"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginEnd="@dimen/dp_10"
            android:textSize="@dimen/sp_20"
            android:text="取消"
            android:background="@drawable/device_button_bg_cancel"/>

        <Button
            android:id="@+id/btn_complete"
            android:layout_width="@dimen/dp_166"
            android:layout_height="wrap_content"
            android:textColor="@color/text_select_color"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginStart="@dimen/dp_10"
            android:textSize="@dimen/sp_20"
            android:text="开始"
            android:background="@drawable/device_button_bg_confim"/>
    </LinearLayout>
</RelativeLayout>

