<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roki="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/home_recipe_live_imgv_return"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_return_selector" />

        <TextView
            android:id="@+id/home_recipe_live_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="#5d5d5d"
            android:textSize="18sp" />


    </RelativeLayout>

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/id_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        roki:pstsIndicatorColor="@color/c33"
        roki:pstsSelectedTabTextColor="@color/c33"
        roki:pstsSelectedTabTextSize="17sp"
        roki:pstsTabTextColor="@color/c52"
        roki:pstsTabTextSize="17sp" />


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/id_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

</LinearLayout>