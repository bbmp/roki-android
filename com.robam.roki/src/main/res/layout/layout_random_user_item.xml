<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_game_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <ImageView
        android:id="@+id/iv_share_recipe"
        android:layout_width="88dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:background="@mipmap/share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/iv_share_recipe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_user_head"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:visibility="invisible"
                android:src="@mipmap/ic_recipe_roki_logo" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6sp"
                android:text="Roki"
                android:textColor="#000000"
                android:textSize="17sp" />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:drawableStart="@drawable/cook_left"
            android:drawableEnd="@drawable/cook_right"
            android:drawablePadding="10dp"
            tools:text="牛油果沙拉"
            android:textColor="#000000"
            android:textSize="24sp" />

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>