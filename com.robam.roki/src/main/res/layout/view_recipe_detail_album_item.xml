<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_recipe_album_item_bg"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imgPhoto"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_recipe_camera" />

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:lines="2"
        android:text="上传你烹饪的美味佳肴吧"
        android:textColor="#626262"
        android:textSize="9sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgOwnerFigure"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_recipe_figure_default" />

        <TextView
            android:id="@+id/txtOwnerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:text="昵称"
            android:textColor="#626262"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/txtPraiseCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/c02"
            android:textSize="9sp" />

        <ImageView
            android:id="@+id/imgParise"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/common_view_background_selector"
            android:scaleType="centerInside"
            android:src="@drawable/ic_recipe_praise" />
    </LinearLayout>

</LinearLayout>