<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="15dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/roki_important_text_color"
        android:textStyle="bold"
        tools:text="步骤1/2"/>

    <com.robam.roki.ui.video.JzvdStdRoundVolume
        android:id="@+id/jz_video"
        android:layout_width="match_parent"
        app:radius_jz="10dp"
        android:layout_height="wrap_content"
        android:minHeight="200dp"/>
    <TextView
        android:id="@+id/tv_step_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/roki_important_text_color"
        tools:text="番茄洗干净，切小块"/>
    <TextView
        android:id="@+id/tv_pengren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:visibility="gone"
        android:textColor="@color/roki_main_text_color"
        android:textStyle="bold"
        android:text="烹饪"/>
</LinearLayout>