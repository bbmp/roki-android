<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_208"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_margin="@dimen/dp_8"
    android:orientation="vertical"
    android:background="@drawable/shape_white_round">

    <com.legent.ui.ext.views.RoundImageView
        android:id="@+id/iv_search_recipe_result"
        android:layout_width="@dimen/dp_167"
        android:layout_height="@dimen/dp_160"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_left_top_corner_radius="@dimen/dp_10"
        app:riv_right_top_corner_radius="@dimen/dp_10"/>

    <TextView
        android:id="@+id/tv_search_recipe_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="@dimen/sp_16"
        android:textColor="#d9000000"
        android:maxEms="7"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/dp_16"
        tools:text="鱼香肉丝"
        app:layout_constraintTop_toBottomOf="@id/iv_search_recipe_result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>