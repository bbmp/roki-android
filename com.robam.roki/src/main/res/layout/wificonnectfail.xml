<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="@drawable/shape_bg_main"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@mipmap/ic_arrow_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/wifi_comm_fail"
            android:textColor="@color/text_color_device_category"
            android:textSize="@dimen/sp_20" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:lines="1"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="@string/page_wifi_connect_fail_1"
            android:textColor="@color/text_color_net_err"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:lines="2"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="@string/page_wifi_connect_fail_2"
            android:textColor="@color/text_color_net_err"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:lines="2"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="@string/page_wifi_connect_fail_3"
            android:textColor="@color/text_color_net_err"
            android:textSize="16sp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:lines="2"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="@string/page_wifi_connect_fail_4"
            android:textColor="@color/text_color_net_err"
            android:textSize="16sp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:lines="3"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="@string/page_wifi_connect_fail_5"
            android:textColor="@color/text_color_net_err"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="69dp">

        <TextView
            android:id="@+id/try_again"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/countdown_selector_3"
            android:gravity="center"
            android:text="@string/try_one_more_time"
            android:textColor="@color/text_color_online"
            android:textSize="@dimen/sp_20"/>


        <TextView
            android:id="@+id/service_online"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_44"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/button_round_selector"
            android:gravity="center"
            android:text="@string/call_service"
            android:textColor="@color/text_color_exit_login"
            android:textSize="@dimen/sp_20"/>


    </LinearLayout>

</RelativeLayout>
