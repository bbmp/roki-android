<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:src="@drawable/ic_return_selector"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:paddingRight="42dp"
            android:text="@string/wifi_comm_fail"
            android:textColor="@color/black"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:lines="1"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="@string/page_wifi_connect_fail_1"
            android:textColor="#111111"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:lines="2"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="@string/page_wifi_connect_fail_2"
            android:textColor="#111111"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:lines="2"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="@string/page_wifi_connect_fail_3"
            android:textColor="#111111"
            android:textSize="16sp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:lines="2"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="@string/page_wifi_connect_fail_4"
            android:textColor="#111111"
            android:textSize="16sp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:lines="3"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="@string/page_wifi_connect_fail_5"
            android:textColor="#111111"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="69dp">

        <TextView
            android:id="@+id/try_again"
            android:layout_width="0dp"
            android:layout_height="37.5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5.5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_wifi_btn_for_one_bg"
            android:gravity="center"
            android:text="@string/try_one_more_time"
            android:textColor="@color/black"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/service_online"
            android:layout_width="0dp"
            android:layout_height="37.5dp"
            android:layout_marginLeft="5.5dp"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:background="@drawable/shape_wifi_btn_bg"
            android:gravity="center"
            android:text="@string/call_service"
            android:textColor="@color/black"
            android:textSize="16sp"/>


    </LinearLayout>

</RelativeLayout>
