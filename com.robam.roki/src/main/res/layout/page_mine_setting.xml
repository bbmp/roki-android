<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mine_background"
    android:orientation="vertical">
    <View
        android:id="@+id/status_bar_fix"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white" />
    <com.hjq.bar.TitleBar app:drawableSize="25dp"
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:barStyle="transparent"
        android:background="#ffffff"
        app:titleColor="@color/mine_text_color"
        app:leftIcon="@mipmap/icon_back_black"
        app:rightSize="18sp" />
    <com.robam.roki.ui.widget.layout.SettingBar
        android:layout_marginTop="15dp"
        android:id="@+id/stb_setting_acc_and_sec"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:bar_leftText="@string/setting_acc_and_sec"
        app:bar_rightIcon="@drawable/icon_more"
        >

    </com.robam.roki.ui.widget.layout.SettingBar>

    <com.robam.roki.ui.widget.layout.SettingBar
        android:id="@+id/stb_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:bar_leftText="@string/setting_clear_cache"
        app:bar_rightIcon="@drawable/icon_more"
       />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_logout"
        style="@style/ButtonStyle3"
        android:textColor="#FB7432"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/setting_logout" />
</LinearLayout>
