<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:fitsSystemWindows="true"
    android:background="@color/mine_white_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:background="@color/mine_white_background"
        android:id="@+id/title_bar"
        layout="@layout/include_title_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/recipe_cure_detail_step_start_cook"
        android:layout_below="@+id/title_bar"

        android:background="@color/mine_white_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mine_white_background">

            <RelativeLayout
                android:id="@+id/recipe_cure_detail_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_248"

                android:layout_marginLeft="@dimen/dp_21"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_21"
                android:layout_marginBottom="@dimen/dp_21"
                android:background="@color/mine_white_background">

                <ImageView
                    android:id="@+id/recipe_cure_detail_collection_image_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_20"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/recipe_cure_detail_collection_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:text="收藏 28k"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:layout_toLeftOf="@+id/recipe_cure_detail_collection_txt"
                    android:text="收藏 28k"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone" />


            </RelativeLayout>


            <TextView
                android:id="@+id/recipe_name_txt_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recipe_cure_detail_img"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="红烧排骨"
                android:textColor="@color/text_color_device"
                android:textSize="@dimen/sp_28" />

            <RelativeLayout
                android:id="@+id/act_recipe_cure_detail_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recipe_name_txt_view"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_20">

                <ImageView

                    android:id="@+id/act_recipe_cure_detail_device_icon"
                    android:layout_width="@dimen/dp_11"
                    android:layout_height="@dimen/dp_11" />

                <TextView
                    android:id="@+id/act_recipe_cure_detail_device_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_toRightOf="@+id/act_recipe_cure_detail_device_icon"
                    android:text="设备：电烤箱/一体机"
                    android:textColor="@color/text_color_device"
                    android:textSize="@dimen/sp_16"></TextView>

                <ImageView

                    android:id="@+id/act_recipe_cure_detail_time_icon"
                    android:layout_width="@dimen/dp_11"
                    android:layout_height="@dimen/dp_11"
                    android:layout_below="@+id/act_recipe_cure_detail_device_icon"
                    android:layout_marginTop="@dimen/dp_16" />

                <TextView
                    android:id="@+id/act_recipe_cure_detail_time_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/act_recipe_cure_detail_device_name"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_toRightOf="@+id/act_recipe_cure_detail_time_icon"
                    android:text="时间：35分钟"
                    android:textColor="@color/text_color_device"
                    android:textSize="@dimen/sp_16"></TextView>

            </RelativeLayout>

            <!--            <TextView-->
            <!--                android:visibility="gone"-->
            <!--                android:id="@+id/recipe_cure_detail_introduce_device"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_below="@+id/recipe_name_txt_view"-->

            <!--                android:layout_marginLeft="@dimen/dp_21"-->
            <!--                android:layout_marginTop="@dimen/dp_29"-->
            <!--                android:layout_marginRight="@dimen/dp_21"-->
            <!--                android:lineSpacingExtra="@dimen/dp_5"-->
            <!--                android:text="设备：蒸烤炸一体机\n时间：1 h 23 min\n难度：简单"-->
            <!--                android:textColor="#1F282D"-->
            <!--                android:textSize="@dimen/sp_16" />-->


            <TextView
                android:id="@+id/recipe_cure_detail_introduce"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_54"
                android:layout_below="@+id/act_recipe_cure_detail_info"
                android:layout_marginLeft="@dimen/dp_21"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_21"
                android:background="@drawable/shape_recipe_name_bg"
                android:text="菜谱介绍豆腐能促进生长发育、改善缺铁性贫血、增强记忆力、缓解疲劳，解热、镇痛增加食欲、帮助消化净化血液等功效。"
                android:textColor="@color/text_color_device"
                android:gravity="center"
                android:textSize="@dimen/sp_14"></TextView>


            <RelativeLayout

                android:id="@+id/recipe_cure_detail_food_add_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recipe_cure_detail_introduce"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/shape_item_bg_rl">

                <TextView
                    android:id="@+id/recipe_cure_detail_food_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_marginTop="@dimen/dp_25"
                    android:text="食材"

                    android:textColor="@color/text_color_device"
                    android:textSize="@dimen/dp_18" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recipe_cure_detail_food_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/recipe_cure_detail_food_title"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_21"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:background="@color/mine_white_background" />

                <TextView
                    android:id="@+id/recipe_cure_detail_food_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/recipe_cure_detail_food_list"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_12"
                    android:drawableRight="@mipmap/add_food_sean_icon"
                    android:text="添加食材"

                    android:textColor="@color/text_color_device"
                    android:textSize="@dimen/sp_18"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/recipe_cure_detail_sean_add_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recipe_cure_detail_food_add_rl"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/shape_item_bg_rl">

                <TextView
                    android:id="@+id/recipe_cure_detail_sean_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="佐料"

                    android:textColor="@color/text_color_device"
                    android:textSize="@dimen/dp_18" />


                <androidx.recyclerview.widget.RecyclerView
                    android:background="@color/mine_white_background"
                    android:id="@+id/recipe_cure_detail_sean_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/recipe_cure_detail_sean_title"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_21"
                    android:layout_marginBottom="@dimen/dp_16" />


                <TextView
                    android:id="@+id/recipe_cure_detail_sean_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/recipe_cure_detail_sean_list"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="添加佐料"
                    android:textColor="@color/text_color_device"
                    android:textSize="@dimen/sp_18"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/shape_item_bg_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recipe_cure_detail_sean_add_rl"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_20">

                <TextView
                    android:id="@+id/recipe_cure_detail_panty_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="备菜"
                    android:textColor="@color/text_color_device"
                    android:textSize="@dimen/dp_18" />


                <androidx.recyclerview.widget.RecyclerView
                    android:background="@color/mine_white_background"
                    android:id="@+id/recipe_cure_detail_step_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/recipe_cure_detail_panty_title"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_21"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:visibility="gone"></androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <Button
        android:background="@drawable/device_button_bg_confim"
        android:id="@+id/recipe_cure_detail_step_start_cook"
        style="@style/style_button_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:textColor="@color/text_select_color"
        android:text="开始烹饪" />
</RelativeLayout>