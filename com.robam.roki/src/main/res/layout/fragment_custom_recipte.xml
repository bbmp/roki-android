<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.page.device.steamovenone.steamovenone920.fragment.CustomRecipeFragment">

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/frg_custom_rc_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/frg_custom_btn_create_recipe" />


    <Button
        android:id="@+id/frg_custom_btn_create_recipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_32"
        android:background="@drawable/shape_custom_create_recipe"
        android:gravity="center"
        android:text="创作菜谱"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18" />

</RelativeLayout>