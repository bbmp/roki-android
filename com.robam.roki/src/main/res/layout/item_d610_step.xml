<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="13dp"
    android:layout_marginEnd="13dp"
    android:layout_marginTop="@dimen/dp_12"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_bg_white_15dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/shape_bg_white_8dp_night"
            android:paddingLeft="16dp">
            <TextView
                android:id="@+id/tv_number"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/shape_bg_yellow_999dp"/>
            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="我的多段（默认）"
                android:textSize="15sp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="center"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_right"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/icon_more"
                android:layout_marginRight="16dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_del"
            android:visibility="gone"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:background="@drawable/shape_bg_white_15dp_right"
            android:textSize="15sp"
            android:gravity="center"
            android:text="删除"/>
    </LinearLayout>

</LinearLayout>