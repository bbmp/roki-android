<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/whitesmoke"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_9"
            android:src="@mipmap/icon_back_black"/>

        <TextView
            android:id="@+id/tv_device_model_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/c41"
            android:textSize="@dimen/sp_20" />

    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:background="@drawable/shape_bg_white_8dp_night">

            <TextView
                android:id="@+id/tv_choice_gear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_8"
                android:text="选择档位"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />
            <LinearLayout
                android:id="@+id/ll_time_gear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/tv_choice_gear"
                android:layout_marginTop="@dimen/dp_8">
                <TextView
                    android:id="@+id/tv_cook_temp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="--℃"
                    android:textSize="@dimen/sp_18"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_gear_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="P0"
                    android:textSize="@dimen/sp_18"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/ll_time_gear"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="烹饪温度"
                    android:textSize="@dimen/sp_18"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="当前档位"
                    android:textSize="@dimen/sp_18"
                    android:gravity="center"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <TextView
                android:id="@+id/tv_cook_time_cx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="烹饪时长:"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:layout_marginRight="4dp"/>

            <TextView
                android:id="@+id/tv_cook_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_cook_time_cx"
                android:text="00:00:00"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <Button
                android:id="@+id/btn_screen_switch"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:background="@mipmap/ic_h_v"
                android:textColor="@color/white" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:background="@drawable/shape_bg_white_8dp_night">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/cook_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:keepScreenOn="true" />

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_status_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="记录中"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/ll_curve_mark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_curve_mark"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:src="@mipmap/ic_curve_mark" />

            <TextView
                android:id="@+id/tv_curve_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="标记步骤"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_finish"
            android:layout_width="@dimen/dp_145"
            android:layout_height="@dimen/dp_45"
            android:background="@drawable/shape_main_color_10dp_bg"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="结束烹饪"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginTop="@dimen/dp_16"/>

    </LinearLayout>
</ScrollView>

</LinearLayout>