<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_white_background"
    android:orientation="vertical">

    <View
        android:id="@+id/status_bar_fix"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00ffffff" />

    <include
        android:id="@+id/title"
        layout="@layout/title_layout_device_function"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_112"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/shape_kitchen_bg_round"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_mode"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_302"
        android:layout_height="@dimen/dp_302"
        android:layout_marginTop="@dimen/dp_44"
        android:layout_gravity="center_horizontal">

        <com.robam.roki.ui.activity3.device.base.view.MyCircleProgress
            android:id="@+id/cpg_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_message_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_message_centre"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="剩余预约时间"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/sp_14" />

        <FrameLayout
            android:id="@+id/tv_message_centre"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:layout_centerInParent="true" />
        <TextView
            android:id="@+id/tv_message_botton"
            android:layout_below="@id/tv_message_centre"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color_gray"
            android:text="预约中"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_28"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/dp_20"
            android:background="@drawable/device_button_bg_cancel"
            android:text="开始烹饪"
            android:textColor="@color/text_color_device_category"
            android:textSize="@dimen/sp_20" />

        <Button
            android:id="@+id/btn_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:background="@drawable/device_button_bg_confim"
            android:text="立刻开始"
            android:textColor="@color/text_select_color"
            android:textSize="@dimen/sp_20" />
    </LinearLayout>
</LinearLayout>

