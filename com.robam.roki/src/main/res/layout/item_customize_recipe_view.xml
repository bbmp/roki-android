<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="@dimen/dp_16"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/mine_white_background"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52">

        <TextView
            android:textColor="@color/text_color_device"
            android:id="@+id/item_customize_txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_25"
            android:text="食材"

            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/item_customize_image_add"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="33dp"
            android:src="@mipmap/add" />
    </RelativeLayout>

    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
        android:id="@+id/item_swipe_menu_view_rc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginBottom="@dimen/dp_16"
        android:visibility="gone"
        android:id="@+id/item_customize_recipe_view_text"
        android:paddingRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="right"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        android:text="+添加食材"
        android:textColor="#FF61ACFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>