<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_white_background">

    <View
        android:id="@+id/status_bar_fix"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00ffffff" />

    <include
        android:id="@+id/title"
        layout="@layout/title_layout_device_function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_bar_fix"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/shape_kitchen_bg_round"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_68">

            <TextView
                android:id="@+id/tv_func_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"
                android:textColor="@color/text_color_device_category"
                android:textSize="@dimen/sp_20"
                tools:text="假日模式" />

            <com.robam.widget.view.SwitchButton
                android:id="@+id/sb_holiday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_20"
                tools:ignore="MissingClass,RelativeOverlap" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_relation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_mode" />


            <TextView
                android:id="@+id/tv_func_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_20"
                android:gravity="center_vertical"
                android:textColor="@color/text_color_device_category"
                android:textSize="@dimen/sp_16"
                tools:text="该模式下油烟机会适时自动开启厨房空气焕然一新" />

            <LinearLayout
                android:id="@+id/fan_linkage_dec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_35"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_line_gray_night"
                        android:gravity="center"
                        android:lines="1"
                        android:text=""
                        android:textColor="@color/text_color_exit_login"
                        android:textSize="@dimen/sp_20" />

                    <TextView
                        android:id="@+id/tv_day_dec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:lines="1"
                        android:text="天未开启烟机，烟机自动换气（换气时"
                        android:textColor="@color/text_holiday_desc"
                        android:textSize="@dimen/sp_16" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_dec_front"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="间为14：00）每周固定 "
                        android:textColor="@color/text_holiday_desc"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/tv_week"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_line_gray"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/text_color_exit_login"
                        android:textSize="@dimen/sp_20" />


                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:background="@drawable/shape_line_gray_night"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/text_color_exit_login"
                        android:textSize="@dimen/sp_20" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="开启"
                        android:textColor="@color/text_holiday_desc"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_dec_after"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="烟机3分钟自动换气"
                    android:textColor="@color/text_holiday_desc"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/iv_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_40"
        android:text="@string/device_default_leave_factory_setting"
        android:textSize="@dimen/sp_12"
        android:visibility="invisible" />

</RelativeLayout>

