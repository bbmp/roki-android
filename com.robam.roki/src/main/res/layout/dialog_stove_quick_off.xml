<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_dialog_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/common_dialog_bottom_bg_with_top_20corner"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="快速关火"
            android:textColor="@color/text_color_device"
            android:textSize="@dimen/sp_20"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_28"/>
        <TextView
            android:id="@+id/tv_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="点击炉头进行关火"
            android:textColor="@color/text_color_search"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_48">


            <LinearLayout
                android:id="@+id/ll_choice_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_left_header"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/ic_left_off" />

                <TextView
                    android:id="@+id/tv_left_head_state"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_21"
                    android:layout_marginTop="8dp"
                    android:text="已关火"
                    android:background="@drawable/shape_bg_bdbdbd_999dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_choice_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_right_header"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/ic_right_off" />

                <TextView
                    android:id="@+id/tv_right_head_state"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_21"
                    android:layout_marginTop="8dp"
                    android:text="工作中"
                    android:background="@drawable/shape_bg_fc9d59_999"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

<View
    android:id="@+id/v_dialog_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:layout_above="@+id/ll_dialog_context"/>

</RelativeLayout>