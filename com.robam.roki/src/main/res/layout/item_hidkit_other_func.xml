<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_kitchen_bg_round"
    android:layout_marginHorizontal="@dimen/dp_20"
   >


    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/device_hidkit_bg_other_title"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/sp_12"
            android:gravity="center"
            android:text="技能一"
            android:textColor="@color/cook_chart_blue"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="1px"
            android:layout_height="@dimen/dp_16"
            android:layout_marginHorizontal="@dimen/dp_8"
            android:background="@color/line_cook_chart" />

        <TextView
            android:id="@+id/tv_tag_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_12"
            android:gravity="center"
            android:text="海量音乐"
            android:textColor="@color/steam_btn_left_text_color"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_top"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:textColor="@color/steam_btn_left_text_color"
        android:textSize="@dimen/sp_16" />

</RelativeLayout>
