<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <View
        android:id="@+id/status_bar_fix"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/transparent" />
    <com.hjq.bar.TitleBar

        android:id="@+id/tb_title"
        android:layout_below="@id/status_bar_fix"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        app:barStyle="transparent"
        app:drawableSize="@dimen/text_saie_20"
        app:leftIcon="@drawable/ic_fuchuang_recipe"
        app:rightIcon="@mipmap/icon_cook_close"
        app:titleColor="@color/mine_text_color"
        app:titleSize="22sp" />

    <FrameLayout
        android:id="@+id/view_add"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/tb_title"
        android:layout_above="@id/ll_roki_speen"/>
    <ImageView
        android:id="@+id/recipe_quit"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@mipmap/recipe_return_new"
        />

    <LinearLayout
        android:id="@+id/ll_foot_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_tishi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_tishi"
            android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/iv_fangxiang"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_fangxiang"
            android:layout_height="30dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:gravity="center">
            <!--  <ImageView
                  android:id="@+id/iv_yuyin"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:src="@mipmap/ic_yuyin"
                  android:layout_height="30dp"/>-->
            <CheckBox
                android:id="@+id/iv_yuyin"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:button="@drawable/checkbox_yuyin"
                android:checked="true"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:gravity="center">
            <CheckBox
                android:id="@+id/cb_yinliang"
                android:layout_width="wrap_content"
                android:button="@drawable/checkbox_yinliang"
                android:checked="true"
                android:layout_height="30dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_roki_speen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:paddingEnd="35dp"
        tools:ignore="RtlHardcoded,RtlSymmetry">

        <TextView
            android:id="@+id/tv_roki_message"
            android:layout_width="175dp"
            android:layout_height="38dp"
            android:background="@drawable/ic_message_bg"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="6dp"
            android:text="你说，ROKI正在听..." />

        <ImageView
            android:id="@+id/iv_roki"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_discern" />
    </LinearLayout>
</RelativeLayout>
