<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="390dp"
    android:background="@color/mine_logon_bg_color"
   >
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_20"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_centerHorizontal="true"
        android:text="关联产品"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_2"
        android:layout_below="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:layout_centerHorizontal="true"
        android:text="确认想关联的产品，开启烟蒸烤联动功能"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_device"
        android:layout_below="@id/tv_2"
        android:layout_above="@id/ll_botton"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/ll_botton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_28"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/dp_166"
            android:layout_height="@dimen/dp_44"
            android:textColor="@color/roki_important_text_color"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginEnd="@dimen/dp_10"
            android:textSize="@dimen/sp_20"
            android:text="取消"
            android:background="@drawable/countdown_selector_black"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_complete"
            android:layout_width="@dimen/dp_166"
            android:layout_height="@dimen/dp_44"
            android:textColor="@color/roki_important_text_color"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginStart="@dimen/dp_10"
            android:textSize="@dimen/sp_20"
            android:text="确认"
            android:background="@drawable/countdown_selector_black"/>
    </LinearLayout>>
</RelativeLayout>

