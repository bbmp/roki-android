<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_recipe_bg"
    android:orientation="vertical">

    <com.legent.ui.ext.views.RoundImageView
        android:id="@+id/imgAlbum"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        app:riv_left_top_corner_radius="@dimen/dp_10"
        app:riv_right_top_corner_radius="@dimen/dp_10"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">

        <TextView

            android:id="@+id/edtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="红烧排骨"
            android:textColor="@color/text_color_net_err"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtName"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="诱人的色泽，很好吃~"
            android:textColor="@color/text_color_online"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:id="@+id/ll_fabulous"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_18"
            android:orientation="horizontal"
            android:layout_below="@+id/txtDesc"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_5">
            <ImageView

                android:id="@+id/imgSrcLogo"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_5"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/select_thumbs_up_publish" />
            <TextView
                android:id="@+id/txtPraiseCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="点赞(15)"
                android:textColor="@color/text_color_net_err"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>




    </RelativeLayout>


</LinearLayout>