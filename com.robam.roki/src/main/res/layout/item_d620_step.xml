<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="13dp"
    android:layout_marginEnd="13dp"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_bg_white_15dp"
        android:orientation="horizontal">
        <com.robam.roki.ui.widget.layout.SettingBar
            android:id="@+id/stb_step"
            android:layout_width="0dp"
            android:background="@drawable/shape_bg_white_15dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:bar_rightIcon="@drawable/icon_more"
            />
        <TextView
            android:id="@+id/tv_del"
            android:visibility="gone"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:background="@drawable/shape_bg_white_15dp_right"
            android:textSize="15sp"
            android:gravity="center"
            android:text="删除"/>
    </LinearLayout>

</LinearLayout>