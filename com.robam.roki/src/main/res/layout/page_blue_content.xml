<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_bg_main"
    android:orientation="vertical">
    <View
        android:id="@+id/status_bar_fix"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/transparent" />
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_below="@id/status_bar_fix">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@mipmap/ic_arrow_back" />

        <TextView
            android:id="@+id/tv_device_model_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/wifi_comm"
            android:textColor="@color/text_color_device_category"
            android:textSize="@dimen/sp_20" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_connect_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/rl_connet_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_100"
                android:gravity="center"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/img_blue_phone"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:src="@mipmap/icon_blue_phone" />

                <LinearLayout
                    android:id="@+id/ll_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_blue_phone"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_blue_wifi"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_above="@id/img_blue_spot"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/icon_blue_wifi_thin"
                        android:visibility="gone" />

                    <com.legent.ui.ext.views.DotLineView
                        android:id="@+id/img_blue_spot"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_4"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:dashGap="@dimen/dp_4"
                        android:orientation="horizontal"
                        app:dot_line_color="#ff61acff"
                        app:dot_line_dot_radius="@dimen/dp_2" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/img_blue_device"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_toRightOf="@id/ll_center"
                    android:src="@mipmap/icon_blue_device" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_connet_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_blue_device_big"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_blue_device" />

                <ImageView
                    android:id="@+id/img_blue_wifi_slant"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="-12dp"
                    android:layout_marginTop="-8dp"
                    android:src="@mipmap/icon_blue_wifi_slant" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_100"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_setp_one"
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:src="@mipmap/icon_blue_connect_wait" />

                <TextView
                    android:id="@+id/tv_setp_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="APP与设备连接中"
                    android:textColor="@color/text_color_net_err"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
                <com.legent.ui.ext.views.DotLineView
                    android:id="@+id/ing_setp_line_one"
                    android:layout_width="@dimen/dp_2"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_height="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    app:dot_line_dot_radius="@dimen/dp_1"
                    app:dot_line_color="@color/text_color_search"
                    android:orientation="vertical"
                    android:dashGap="@dimen/dp_2"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_setp_two"
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:src="@mipmap/icon_blue_connect_wait" />
                <TextView
                    android:id="@+id/tv_setp_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="等待设备发送WiFi信息"
                    android:textColor="@color/text_color_net_err"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
                <com.legent.ui.ext.views.DotLineView
                    android:id="@+id/ing_setp_line_two"
                    android:layout_width="@dimen/dp_2"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_height="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    app:dot_line_dot_radius="@dimen/dp_1"
                    app:dot_line_color="@color/text_color_search"
                    android:orientation="vertical"
                    android:dashGap="@dimen/dp_2" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_setp_three"
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:src="@mipmap/icon_blue_connect_wait" />

                <TextView
                    android:id="@+id/tv_setp_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="等待设备联网"
                    android:textColor="@color/text_color_net_err"
                    android:textSize="@dimen/sp_16" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_fail_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:src="@mipmap/icon_blue_wifi_fail"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加失败"
            android:textColor="@color/text_color_net_err"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/sp_20"
            android:layout_marginTop="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.请确认设备是否处于通电状态。\n2.请确认您输入了正确的wifi密码。\n3.请确认您的wifi是2.4G频段。\n4.配网过程中请尽量靠近设备，保持与设备蓝牙保持稳定连接。\n5.配网中请勿关闭蓝牙。"
            android:textColor="@color/text_color_touch_retry"
            android:textSize="@dimen/sp_14"
            android:lineSpacingExtra="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_try_again"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="再试一次"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:textColor="@color/text_color_online"
            android:textSize="16sp"
            android:background="@drawable/countdown_selector_3"/>
        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="重新设置"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:textColor="@color/text_color_exit_login"
            android:textSize="16sp"
            android:background="@drawable/button_round_selector"/>

    </LinearLayout>


</LinearLayout>