<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <!--标题-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical">
            <!--图标-->
            <ImageView
                android:id="@+id/fan8700_remindsoupsetting_imgV_titleimg"
                android:layout_width="62dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_fan8700_kitchencleaning_yellow" />
            <!--文字-->
            <TextView
                android:id="@+id/fan8700_remindsoupsetting_tv_titletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="厨房净化"
                android:textColor="@color/Black"
                android:textSize="20sp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fan8700_remindsoupsetting_linear_divMain"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <!--中间圆圈部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <!--小厨房-->
            <FrameLayout
                android:id="@+id/fan8700_kitchencleaning_frame_small"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/fan8700_kitchencleaning_imgV_small"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_fan8700_circle_yellow" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fan8700_kitchencleaning_tv_smallabove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="温馨"
                        android:textColor="@color/c02"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/fan8700_kitchencleaning_tv_smallbelow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="小厨房"
                        android:textColor="@color/c02"
                        android:textSize="20sp" />
                </LinearLayout>
            </FrameLayout>
            <!--大厨房-->
            <FrameLayout
                android:id="@+id/fan8700_kitchencleaning_frame_big"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/fan8700_kitchencleaning_imgV_big"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_fan8700_circle_gray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fan8700_kitchencleaning_tv_bigabove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="豪气"
                        android:textColor="@color/c03"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/fan8700_kitchencleaning_tv_bigbelow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="大厨房"
                        android:textColor="@color/c03"
                        android:textSize="20sp" />

                </LinearLayout>
            </FrameLayout>
            <!--开放厨房-->
            <FrameLayout
                android:id="@+id/fan8700_kitchencleaning_frame_open"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/fan8700_kitchencleaning_imgV_open"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_fan8700_circle_gray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fan8700_kitchencleaning_tv_openabove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="开放式"
                        android:textColor="@color/c03"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/fan8700_kitchencleaning_tv_openbelow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="厨房"
                        android:textColor="@color/c03"
                        android:textSize="20sp" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>


    </LinearLayout>
    <!--确认-->
    <Button
        android:id="@+id/fan8700_remindsoupsetting_tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="16px"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@color/c02"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/c03"
        android:textSize="20sp" />
</LinearLayout>
