<?xml version="1.0" encoding="utf-8"?><!-- 有标题，有文本内容，两个按钮   -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/common_dialog_root_bg_layout_style">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/shape_diglog_bg_splash"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/common_dialog_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/text_color_net_err"
                android:layout_marginTop="@dimen/common_dialog_title_bottom_small_space"
                android:layout_marginBottom="@dimen/common_dialog_title_bottom_small_space"
                tools:text="对话框标题"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <Button
                android:id="@+id/common_dialog_cancel_btn"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/text_color_online"
                android:background="@drawable/countdown_selector_3"
                tools:text="取消" />

            <TextView
                android:layout_width="@dimen/dp_10"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/common_dialog_ok_btn"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:textColor="@color/text_color_exit_login"
                android:background="@drawable/button_round_selector"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/sp_20"
                tools:text="确定" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>