<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="26dp"
        android:paddingBottom="11dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"

                android:src="@drawable/icon_left_recipe" />

        </LinearLayout>
        <include layout="@layout/layout_random_user_item"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_today_which_recipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:text="@string/home_eat_what"
            android:textColor="@color/common_text"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_recipe_game_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:text="@string/home_click_to_get_recipe"
            android:textColor="@color/common_text"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_random_recipe"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:src="@drawable/game" />



        <LinearLayout
            android:id="@+id/ll_recipe_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:paddingHorizontal="48dp"
            android:visibility="invisible"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/tv_change_recipe"
                android:layout_width="118dp"
                android:layout_height="57dp"
                android:src="@mipmap/button_hyg"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/tv_choice_recipe"
                android:layout_width="118dp"
                android:layout_height="57dp"
                android:src="@mipmap/button_jtl"
                android:scaleType="fitXY"
                android:layout_marginLeft="12dp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_random_recipe"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/common_button_selector_change"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:gravity="center"
            android:text="@string/home_click_to_random"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="11dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_last_week_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#666666"
                android:text="上周TOP榜单" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_chevron_right_24"
                android:layout_marginStart="8dp"/>
        </LinearLayout>


    </LinearLayout>

</FrameLayout>