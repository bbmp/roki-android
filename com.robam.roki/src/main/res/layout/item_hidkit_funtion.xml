<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_kitchen_bg_round"
    android:layout_marginStart="@dimen/dp_20"
    android:layout_marginEnd="@dimen/dp_20"
    >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_main_func"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_voice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_88"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_voice"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_24"
            android:src="@mipmap/icon_vol_off" />

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/iv_voice_add"
            android:layout_toEndOf="@id/iv_voice"
            android:maxHeight="3dp"
            android:minHeight="3dp"
            android:progressDrawable="@drawable/shape_seekbar_layer"
            android:thumb="@drawable/progress_ball_bg"
            android:thumbOffset="0dp" />


        <ImageView
            android:id="@+id/iv_voice_add"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_24"
            android:src="@mipmap/icon_vol_on" />


    </RelativeLayout>


</RelativeLayout>