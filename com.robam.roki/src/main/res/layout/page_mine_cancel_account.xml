<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_background"
    android:orientation="vertical">
    <View
        android:id="@+id/status_bar_fix"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white" />
    <com.hjq.bar.TitleBar app:drawableSize="25dp"
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        app:barStyle="transparent"
        app:leftIcon="@mipmap/icon_back_black"
        app:rightSize="18sp"
        app:titleColor="@color/mine_text_color" />


    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:text="亲爱的ROKI用户："
        android:textColor="#333333"
        android:textSize="14sp"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:textSize="14sp"
        android:textColor="#666666"
        android:text="感谢您一直以来的陪伴，注销账户后，ROKI将无法继\n续为您提供以下服务："
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:textSize="14sp"
        android:textColor="#333333"
        android:text="1、账户中的设备信息等将被全部清空且无法恢复\n2、账户中的菜谱将被全部清空且无法恢复\n3、账户中的使用记录、厨艺分享等内容将被全部清空且无法恢复"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#666666"
        android:text="申请注销表示您自愿永久放弃账户内所有虚拟资产，不可恢复，请您谨慎操作。" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_alignParentBottom="true"
            android:id="@+id/btn_logoff"
            style="@style/ButtonStyle3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/acc_query_logoff" />
    </RelativeLayout>
</LinearLayout>