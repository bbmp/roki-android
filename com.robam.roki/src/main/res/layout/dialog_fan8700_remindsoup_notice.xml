<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <!--标题-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <!--文字-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="煲汤提醒"
                android:textColor="@color/c03"
                android:textSize="20sp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fan8700_remindsoupsetting_linear_divMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">
        <!--闹钟图标-->
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_fan8700_remind_clock" />

        <TextView
            android:id="@+id/fan8700_remindsoup_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="是否关闭煲汤提醒？"
            android:textColor="@color/c03"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fan8700_remindsoup_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="关闭请及时关闭灶具哦。"
            android:textColor="@color/c03"
            android:textSize="20sp" />
    </LinearLayout>
    <!--确认-->
    <Button
        android:id="@+id/fan8700_remindsoupsetting_tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="16px"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@color/c02"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/c03"
        android:textSize="20sp" />
</LinearLayout>
