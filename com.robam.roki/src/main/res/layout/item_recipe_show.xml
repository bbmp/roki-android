<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_recipe_show_work"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_40"
        android:src="@mipmap/button_issue" />

    <TextView
        android:id="@+id/item_recipe_show_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:text="晒出你的作品"
        android:textColor="@color/text_color_net_err"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold" />

    <LinearLayout


        android:orientation="vertical"
        android:layout_below="@+id/item_recipe_show_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/item_show_cook_rl_empty"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/dp_59"
            android:layout_marginTop="@dimen/dp_59"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="@dimen/dp_32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_image_recipe_show"
                android:layout_centerHorizontal="true"
                android:text="还没有人发布作品呀，快来抢沙发～"
                android:textColor="@color/text_color_online"/>

            <ImageView

                android:id="@+id/item_image_recipe_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/no_work" />

        </RelativeLayout>

        <include
            android:id="@+id/item_show_cook_1"
            layout="@layout/item_show_cook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <include
            android:id="@+id/item_show_cook_2"
            layout="@layout/item_show_cook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_show_cook_more_txt"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_20"
            android:textColor="#ff61acff"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:text="查看全部4个作品"

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"/>




    </LinearLayout>

</RelativeLayout>