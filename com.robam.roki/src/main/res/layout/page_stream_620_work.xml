<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView


        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/title_bar_steam_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/selector_rika_item_bg"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />

            <TextView
                android:id="@+id/tv_device_model_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/c41"
                android:textSize="20sp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_recipe"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:textSize="22sp"
            android:visibility="gone"
            android:textColor="@color/white"
            tools:text="P1 红烧肉" />

        <LinearLayout

            android:id="@+id/ll_rika_z"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_model"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/model"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_steam"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="蒸汽量"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_temp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/temp"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/time"
                    android:textColor="@color/white"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_model_content"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1111"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_steam_content"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_temp_content"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_time_content"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/ll_mult"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="42dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_one"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="46dp"
                android:background="@drawable/shape_rika_mult_btn_bg"
                android:text="@string/c906_other_step_one"
                android:textSize="18sp"
                android:textColor="@color/white" />


            <Button
                android:id="@+id/btn_two"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:alpha="0.6"
                android:background="@drawable/shape_integrated_mult_btn"
                android:text="@string/c906_other_step_two"
                android:textSize="18sp"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_there"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="46dp"
                android:alpha="0.6"
                android:textSize="18sp"
                android:background="@drawable/shape_integrated_mult_btn"
                android:text="@string/c906_other_step_there"
                android:textColor="@color/white" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_run_and_stop"
            android:layout_width="245dp"
            android:layout_height="245dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp">

            <RelativeLayout
                android:id="@+id/ll_run_animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_run_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_run_animation_down" />

                <ImageView
                    android:id="@+id/iv_run_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_run_animation_up" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_work_dec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingBottom="30dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="30sp" />


                <TextView
                    android:id="@+id/tv_work_state_name"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingTop="35dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <ImageView

                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@mipmap/img_run_round_white" />
            </RelativeLayout>


        </FrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_chugou_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/fl_pause"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:visibility="invisible"
                tools:text="请倒掉水箱中的余水，重新加满清水，推入水箱，点击产品端的开始键" />
            <FrameLayout
                android:id="@+id/fl_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/iv_pause"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

                <TextView
                    android:id="@+id/tv_pause"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:gravity="center"
                    android:textColor="@color/White"
                    android:textSize="18sp" />

            </FrameLayout>


            <FrameLayout
                android:id="@+id/fl_add_steam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:paddingBottom="10dp">


                <ImageView
                    android:id="@+id/iv_add_steam"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

                <TextView
                    android:id="@+id/tv_add_steam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:gravity="center"
                    android:text="加蒸汽"
                    android:textColor="@color/White"
                    android:textSize="18sp" />

            </FrameLayout>

            <FrameLayout
                android:visibility="invisible"
                android:id="@+id/fl_run_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/iv_finish"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/img_run_stop" />

                <TextView
                    android:id="@+id/finish_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:gravity="center"
                    android:text="@string/close"
                    android:textColor="@color/White"
                    android:textSize="18sp" />

            </FrameLayout>


        </RelativeLayout>

    </LinearLayout>

</FrameLayout>