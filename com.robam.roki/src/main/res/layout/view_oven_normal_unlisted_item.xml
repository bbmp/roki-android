<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/device_board_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageKind"
            android:layout_width="94px"
            android:layout_height="86px"
            android:src="@drawable/ic_device_oven_chicken_wing" />

        <TextView
            android:id="@+id/txtKindTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageKind"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="类别"
            android:textColor="@color/c14"
            android:textSize="22px" />
    </LinearLayout>
</RelativeLayout>
