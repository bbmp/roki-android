<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_white_background"
    android:orientation="vertical">

    <View
        android:id="@+id/status_bar_fix"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00ffffff" />

    <include
        android:id="@+id/title"
        layout="@layout/title_layout_device_function"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/shape_kitchen_bg_round">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/rv_mode"
            android:background="@color/line_mode" />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_line"
            android:layout_marginStart="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_14"
            android:text="最高温度"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:id="@+id/tv_temp"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_1"
            android:layout_marginStart="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_16"
            android:gravity="center"
            android:textColor="@color/text_color_device_category"
            android:textSize="@dimen/sp_16"
            tools:text="70℃" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_line"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_14"
            android:text="工作耗时"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_2"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_16"
            android:gravity="center"
            android:textColor="@color/text_color_device_category"
            android:textSize="@dimen/sp_16"
            tools:text="1.5h" />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_line"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_28"
            android:text="单次耗水"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:id="@+id/tv_water"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_3"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_28"
            android:layout_marginBottom="@dimen/dp_16"
            android:gravity="center"
            android:textColor="@color/text_color_device_category"
            android:textSize="@dimen/sp_16"
            tools:text="10L" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/shape_kitchen_bg_round"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:gravity="center"
            android:text="辅助功能"
            android:textColor="@color/text_color_device_category"
            android:textSize="@dimen/sp_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_64"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:background="@drawable/shape_select_time" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_mode_param"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/shape_kitchen_bg_round"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_68">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"
                android:text="预约"
                android:textColor="@color/text_color_device_category"
                android:textSize="@dimen/sp_20" />

            <com.robam.widget.view.SwitchButton
                android:id="@+id/sb_order_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                tools:ignore="MissingClass,RelativeOverlap" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_order"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/dp_68">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_cook_chart"/>
            <TextView
                android:id="@+id/tv_order_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"
                tools:text="今天12:00开始烹饪"
                android:textColor="@color/text_color_device_category"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_20"
                android:src="@mipmap/icon_right_device"
                />

        </RelativeLayout>
        <!--        <com.robam.widget.layout.SettingBar-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="@dimen/dp_60"-->
        <!--            android:background="@drawable/shape_bg_white_15dp"-->
        <!--            app:bar_leftText="预约">-->

        <!--            <com.robam.widget.view.SwitchButton-->
        <!--                android:id="@+id/sb_order_switch"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_gravity="end|center_vertical"-->
        <!--                android:layout_marginHorizontal="15dp" />-->
        <!--        </com.robam.widget.layout.SettingBar>-->

        <com.robam.widget.layout.SettingBar
            android:id="@+id/stb_order"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:background="@drawable/shape_bg_white_15dp"
            android:visibility="gone"
            app:bar_leftText="今天12:00开始烹饪"
            app:bar_rightIcon="@drawable/icon_more" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_28"
        android:background="@drawable/device_button_bg_confim"
        android:text="开始"
        android:textColor="@color/text_select_color"
        android:textSize="@dimen/sp_20" />
</LinearLayout>

