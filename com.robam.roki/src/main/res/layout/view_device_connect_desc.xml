<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_add_device_message"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@color/navajowhite"
        android:text="正在查找附近可添加设备..."/>
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/img_device"
        android:layout_below="@+id/tv_add_device_message"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_device"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/ll_tip"
        android:layout_marginTop="15dp"
        android:layout_below="@id/tip1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:visibility="gone"
            android:id="@+id/tip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/img_tip"
            android:layout_width="20dp"
            android:layout_height="20dp"
            />

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tip3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_tip"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black" />

