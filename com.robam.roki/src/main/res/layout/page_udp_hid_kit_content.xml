<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/tv_device_model_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/device_content"
            android:textColor="@color/c41"
            android:textSize="20sp" />


    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <!--        ic_hid_kit_center-->
        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_hid_kit2" />


        <RelativeLayout
            android:id="@+id/ll_message"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="40dp"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_link_text"
                android:textColor="#A5A5A5"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_dot"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_device_transfer_succeed_and_failed"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_device_transfer_succeed_and_failed"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="74dp"
                android:src="@mipmap/ic_content_succ" />

            <TextView
                android:id="@+id/tv_device_transfer_succeed_and_failed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="@string/device_transmit_succeed_text" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_device_link_network_succeed_and_failed"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_device_link_network_succeed_and_failed"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="74dp"
                android:src="@mipmap/ic_content_succ" />

            <TextView
                android:id="@+id/tv_device_link_network_succeed_and_failed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="@string/device_link_network_text" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_device_bind_account_succeed_and_failed"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_device_bind_account_succeed_and_failed"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="74dp"
                android:src="@mipmap/ic_content_succ" />

            <TextView
                android:id="@+id/tv_device_bind_account_succeed_and_failed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="@string/device_account_bind_succeed_text" />


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_common"
            android:textColor="@color/common_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/tv_common_2"
            android:textColor="@color/common_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--        android:text="@string/softap_not"-->


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_common"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="40dp"
            android:text="确认连接" />
    </LinearLayout>

</LinearLayout>