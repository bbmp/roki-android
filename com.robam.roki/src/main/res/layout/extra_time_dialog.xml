<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"

    android:background="@drawable/shape_dialog_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="#333"
        android:textSize="@dimen/sp_24"
        android:layout_marginTop="@dimen/dp_17"
        android:text="加时"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/dp_1"
        android:textSize="@dimen/sp_14"
        android:textColor="#333"
        android:gravity="center"
        android:text="加时后，设备将根据设置的时间继续烹饪"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

   <com.contrarywind.view.WheelView

       android:layout_marginTop="@dimen/dp_16"
       android:id="@+id/dialog_extra_time_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>


    <TextView
        android:textColor="#333"
        android:background="@drawable/shape_icon_save_bg"
        style="@style/style_button_confirm"
        android:id="@+id/dialog_extra_time_txt_confirm"
        android:text="确定加时"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"/>
    <TextView
        android:layout_marginBottom="@dimen/dp_16"
        android:textColor="#333"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/shape_icon_bg_radius_23"
        style="@style/style_button_cancel"
        android:gravity="center"
        android:id="@+id/dialog_extra_time_txt_cancel"
        android:text="取消"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"/>
</LinearLayout>