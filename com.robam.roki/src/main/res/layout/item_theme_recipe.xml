<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/shape_kitchen_bg_round"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    android:layout_marginTop="@dimen/dp_20"
    android:layout_height="@dimen/dp_280">

    <com.legent.ui.ext.views.RoundImageView
        android:id="@+id/iv_theme_item_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_215"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_default"
        app:riv_left_top_corner_radius="@dimen/dp_10"
        app:riv_right_top_corner_radius="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_theme_recipe_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_13"
        android:text="device"
        android:textSize="@dimen/sp_10"
        android:paddingLeft="@dimen/dp_7"
        android:paddingTop="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_2"
        android:paddingRight="@dimen/dp_7"
        android:textColor="#ffffffff"
        android:visibility="visible"
        android:background="@drawable/bg_recipe_device"
        app:layout_constraintLeft_toLeftOf="@id/iv_theme_item_img"
        app:layout_constraintBottom_toBottomOf="@id/iv_theme_item_img"/>

    <TextView
        android:id="@+id/tv_theme_recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:text="蜜汁烤鸡翅"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/text_color_net_err"
        app:layout_constraintTop_toBottomOf="@id/iv_theme_item_img"
        app:layout_constraintBottom_toTopOf="@id/tv_theme_recipe_desc"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_theme_recipe_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:singleLine="true"
        android:text="阅读 10.1w"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/text_color_touch_retry"
        app:layout_constraintTop_toBottomOf="@id/tv_theme_recipe_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_love_theme"/>

    <ImageView
        android:id="@+id/iv_love_theme"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:src="@drawable/ic_recipe_favority_black_shape"
        app:layout_constraintTop_toBottomOf="@id/iv_theme_item_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>