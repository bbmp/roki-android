<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_homedevice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentStart="true"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ic_device_scan"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@mipmap/ic_device_scan" />

            <TextView

                android:textSize="@dimen/dp_16"
                android:textColor="@color/black"
                style="@style/titlebar_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/home_tab_device_kitchen" />

            <ImageView
                android:id="@+id/ic_device_add"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_toLeftOf="@+id/frag_image_message"
                android:src="@mipmap/ic_device_add_night" />


            <ImageView

                android:id="@+id/frag_image_message"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/dp_18"
                android:src="@mipmap/notice" />

            <TextView
                android:id="@+id/frag_txt_notification_number"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_9"
                android:background="@drawable/shape_notification"
                android:gravity="center"
                android:text="1"

                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"
                android:visibility="invisible" />
            <!--        <com.legent.ui.ext.views.TitleBar-->
            <!--            android:id="@+id/titleView"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:visibility="visible"-->
            <!--            android:layout_toLeftOf="@+id/frag_image_message"-->
            <!--            android:background="@color/transparent"/>-->



        </RelativeLayout>
    </LinearLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/pull_refresh_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:overScrollMode="never"
        app:ptrAnimationStyle="flip"
        app:ptrMode="both"
        app:ptrShowIndicator="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/tv_kitchen_knowledge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="left"
                android:text="@string/fan_kitchen_knowledge"
                android:textColor="@color/c41"
                android:textSize="18sp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_device_intellectual_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:gravity="left"
                android:text="@string/device_intellectual_products"
                android:textColor="@color/c41"
                android:textSize="18sp"
                android:visibility="gone" />

            <!--添加油烟机电磁灶View-->
            <GridLayout
                android:id="@+id/deviceContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:columnCount="2"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

            </GridLayout>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>


    <ImageView
        android:layout_below="@+id/title"
        android:id="@+id/gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="212dp"
            android:layout_height="155dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:alpha="0.6"
            android:src="@mipmap/img_newbie_add"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginTop="50dp">
        <include
            layout="@layout/view_home_empty">
        </include>
    </LinearLayout>

</RelativeLayout>
