<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_610_recipe"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mine_white_background"
    android:layout_marginStart="13dp"
    android:layout_marginEnd="13dp"
    android:layout_marginTop="10dp"
    >

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_select"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/ic_order_recipe_normal" />
                <TextView

                    android:id="@+id/tv_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_device_category"
                    android:text="我的多段（默认）"
                    android:textSize="@dimen/sp_20"
                    android:layout_marginLeft="8dp"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:paddingLeft="@dimen/dp_3"
                    android:text="50min"
                    android:textColor="@color/text_color_online"
                    android:textSize="@dimen/sp_16"
                    android:drawableRight="@mipmap/more__3x"
                    android:drawablePadding="4dp"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:background="@color/mine_white_background"
                android:id="@+id/rv_sub_steam_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/tv_show"
                android:layout_width="64dp"
                android:layout_height="24dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="分享"
                android:textSize="15sp"
                android:drawablePadding="4dp"
                android:background="@drawable/shape_bg_f2b33e_12"
                android:visibility="gone"
                android:layout_gravity="right"
                android:layout_marginRight="16dp"
                android:layout_marginTop="-36dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_del"
            android:visibility="gone"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:background="@drawable/shape_bg_white_15dp_right"
            android:textSize="15sp"
            android:gravity="center"
            android:text="删除"/>
        <!--    <TextView-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="1dp"-->
        <!--        android:background="#D7D7D7"/>-->

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        android:layout_alignBottom="@+id/ll_item"
        android:layout_alignParentEnd="true">

        <TextView
            android:visibility="gone"
            android:id="@+id/txt_share"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_23"
            android:layout_alignParentRight="true"

            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:background="@drawable/shape_recipe_share"
            android:gravity="center"
            android:text="分享"
            android:textColor="#000000"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>
</RelativeLayout>