<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_bg_main"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <View
        android:id="@+id/status_bar_fix"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/transparent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@mipmap/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/my_about"
            android:textColor="@color/text_color_device_category"
            android:textSize="@dimen/sp_20" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/shape_kitchen_bg_round">
        <ImageView
            android:id="@+id/ic_about_logo"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:scaleType="centerInside"
            android:layout_marginTop="@dimen/dp_28"
            android:src="@mipmap/logo_roki" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="V 1.0"
            android:textColor="@color/text_color_net_err"
            android:textSize="@dimen/sp_16" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_28"
            android:background="@drawable/shape_divider_bg"/>
        <RelativeLayout
            android:id="@+id/stb_about_web"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_59"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20">

            <TextView
                android:id="@+id/tv_service"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_59"
                android:gravity="center_vertical"
                android:text="@string/robam_web"
                android:textColor="@color/text_color_net_err"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_toLeftOf="@id/arrow_web"
                android:layout_toRightOf="@id/tv_service"
                android:gravity="center_vertical|right"
                android:text="www.robam.com"
                android:textColor="@color/text_color_net_err"
                android:textSize="@dimen/sp_16" />
            <ImageView
                android:id="@+id/arrow_web"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@mipmap/ic_arrow_right"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/shape_divider_bg"/>
        <RelativeLayout
            android:id="@+id/stb_about_agreement"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_59"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_59"
                android:gravity="center_vertical"
                android:text="用户协议"
                android:textColor="@color/text_color_net_err"
                android:textSize="@dimen/sp_18" />
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@mipmap/ic_arrow_right"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/shape_divider_bg"/>
        <RelativeLayout
            android:id="@+id/stb_about_privacy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_59"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_59"
                android:gravity="center_vertical"
                android:text="隐私政策"
                android:textColor="@color/text_color_net_err"
                android:textSize="@dimen/sp_18" />
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@mipmap/ic_arrow_right"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/shape_divider_bg"/>
        <RelativeLayout
            android:id="@+id/stb_upload"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_59"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_59"
                android:gravity="center_vertical"
                android:text="检查更新"
                android:textColor="@color/text_color_net_err"
                android:textSize="@dimen/sp_18" />
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@mipmap/ic_arrow_right"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_about_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_72"
        android:textColor="@color/text_color_touch_retry"
        android:gravity="center"
        android:textSize="@dimen/sp_12"
        android:text="杭州老板电器股份有限公司\nCopyright by 2011-2021 Roki.All Right Reserved"
        />
</LinearLayout>
