<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:id="@+id/item_add_picture"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <RelativeLayout

       android:layout_margin="@dimen/dp_4"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_112"
       android:background="@drawable/shape_add_picture_bg">

       <ImageView
           android:id="@+id/image_show_work"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_centerInParent="true"

           android:scaleType="center" />

       <ImageView
           android:id="@+id/image_show_add"
           android:layout_width="@dimen/dp_40"
           android:layout_height="@dimen/dp_40"
           android:layout_centerInParent="true"
           android:src="@mipmap/icon_add"/>
       <ImageView
           android:id="@+id/image_show_delete"
           android:layout_width="@dimen/dp_28"
           android:layout_height="@dimen/dp_28"
           android:layout_alignParentRight="true"
           android:padding="@dimen/dp_5"
           android:scaleType="centerInside"
           android:src="@mipmap/icon_delete_pic" />



   </RelativeLayout>

</RelativeLayout>