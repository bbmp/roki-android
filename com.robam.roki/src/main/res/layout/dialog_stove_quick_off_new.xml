<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_dialog_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_28"
            android:gravity="center"
            android:text="快速关火"
            android:textColor="@color/text_color_device_category"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/tv_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:gravity="center"
            android:text="点击炉头进行关火"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_40"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/ll_choice_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_left_head"
                    android:layout_width="@dimen/dp_124"
                    android:layout_height="@dimen/dp_124"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/img_stove_head_common" />

                <TextView
                    android:id="@+id/tv_left_head_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="左灶\n已关火"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/sp_16" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_choice_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_right_head"
                    android:layout_width="@dimen/dp_124"
                    android:layout_height="@dimen/dp_124"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/img_stove_head_common" />

                <TextView
                    android:id="@+id/tv_right_head_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="左灶\n已关火"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/sp_16" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

<View
    android:id="@+id/v_dialog_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:layout_above="@+id/ll_dialog_context"/>

</RelativeLayout>