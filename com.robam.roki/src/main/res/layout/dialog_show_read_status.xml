<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/shape_show_read_status_bg"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_show_read_status_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60"
        android:text="确认全部已读消息？"
        android:textColor="#333333"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_show_read_status_txt"
        android:layout_marginTop="@dimen/dp_68"
        android:layout_marginBottom="@dimen/dp_20"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_show_read_status_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_weight="1"
            android:background="@drawable/shape_show_cancel_bg"
            android:text="取消"
            android:textColor="#ff666666"
            android:textSize="@dimen/sp_16" />


        <Button
            android:id="@+id/dialog_show_read_status_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_weight="1"
            android:background="@drawable/shape_show_confirm_bg"
            android:text="确认"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />


    </LinearLayout>

</RelativeLayout>