<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/mine_white_background"
    android:layout_height="match_parent"
    tools:context=".ui.activity3.device.steamoven.SteamCurveWorkActivity"
    tools:ignore="MissingDefaultResource">


    <include
        android:id="@+id/act_steam_curve_work"
        layout="@layout/include_title_bar" />

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/item_mutil_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/act_steam_curve_work"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@color/steam_work_item_bg">

        <com.robam.roki.ui.widget.view.ItemMutiTitleView
            android:id="@+id/item_mutil_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_44" />

        <LinearLayout

            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/act_steam_curve_work_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_mutil_title_bar"
            android:layout_marginTop="@dimen/dp_35"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_50"
                android:background="@color/steam_work_item_bg"
                android:orientation="horizontal">

                <TextView


                    android:id="@+id/item_mutil_title_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="模式"
                    android:textColor="@color/text_color_device_category"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_22"
                    android:background="#FFFFFFFF"
                    android:visibility="gone" />

                <TextView


                    android:id="@+id/item_mutil_title_temp_down_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="上温度"
                    android:textColor="@color/text_color_device_category"
                    android:textSize="@dimen/sp_15"
                    android:visibility="gone" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_22"
                    android:background="#FFFFFFFF"
                    android:visibility="gone" />

                <TextView

                    android:id="@+id/item_mutil_title_temp_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="温度"
                    android:textColor="@color/text_color_device_category"
                    android:textSize="@dimen/sp_15" />

                <View

                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_22" />

                <TextView
                    android:id="@+id/item_mutil_title_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="时间"
                    android:textColor="@color/text_color_device_category"
                    android:textSize="@dimen/sp_15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_50"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/act_steam_curve_item_model_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_12"
                    android:text="风焙烤"
                    android:textColor="@color/text_color_device"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    android:id="@+id/act_steam_curve_item_temp_content_down"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_12"
                    android:text="915℃"
                    android:textColor="@color/text_color_device"
                    android:textSize="@dimen/sp_24"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/act_steam_curve_item_temp_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_12"
                    android:text="95℃"
                    android:textColor="@color/text_color_device"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    android:id="@+id/act_steam_curve_item_time_content"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_12"
                    android:text="60min"
                    android:textColor="@color/text_color_device"
                    android:textSize="@dimen/sp_24" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_mutil_top_bar"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/shape_recipe_name_bg">

        <TextView
            android:id="@+id/act_steam_curve_work_left_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_30"
            android:text="剩余时间"
            android:textColor="@color/text_color_device"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/act_steam_curve_work_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_toRightOf="@+id/act_steam_curve_work_left_time_text"
            android:text="11"
            android:textColor="@color/text_color_device"
            android:textSize="@dimen/sp_30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_toRightOf="@+id/act_steam_curve_work_time"
            android:text="min"
            android:textColor="@color/text_color_device"
            android:textSize="@dimen/sp_12" />


        <ImageView
            android:id="@+id/act_switch_scream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_marginRight="@dimen/dp_16"
            android:src="@mipmap/icon_switch_screen" />

        <TextView
            android:id="@+id/act_steam_curve_work_line_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/act_switch_scream"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_20"
            android:background="#0DFFFFFF" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/act_steam_cook_chart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_300"
            android:layout_below="@+id/act_steam_curve_work_line_top"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_16" />

        <TextView
            android:id="@+id/act_steam_curve_work_line_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/act_steam_cook_chart"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="#0DFFFFFF" />

        <Button
            android:id="@+id/act_steam_curve_make_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/act_steam_curve_work_line_bottom"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/shape_add_picture_bg"
            android:text="标记步骤"
            android:textColor="@color/common_dialog_btn_normal_bg_blue"
            android:textSize="@dimen/sp_20" />
    </RelativeLayout>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_28"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_left_work_finish"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:background="@drawable/device_button_bg_cancel"
            android:text="结束工作"
            android:textColor="@color/text_color_device_category"
            android:textSize="@dimen/sp_20" />

        <Button
            android:id="@+id/btn_right_work_suspend"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:background="@drawable/device_button_bg_confim"
            android:text="暂停"
            android:textColor="@color/text_select_color"
            android:textSize="@dimen/sp_20" />
    </LinearLayout>



</RelativeLayout>