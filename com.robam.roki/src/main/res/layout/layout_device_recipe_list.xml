<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="7dp"
    android:layout_marginRight="16dp"
    android:background="@color/roki_background_white"
    android:orientation="horizontal"
    tools:showIn="@layout/view_home_recipe_new3">
    <!--灶具菜谱-->
    <LinearLayout
        android:id="@+id/home_recipe_ll_stove"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/cookbook_stove_list" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:text="@string/home_stove_recipe_text"
            style="@style/RokiGeneralText" />

    </LinearLayout>

    <!--一体机菜谱-->
    <LinearLayout
        android:id="@+id/home_recipe_ll_combi_steam_oven"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/cookbook_combi_steam_oven_list" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:text="@string/home_combi_steam_oven_recipe_text"
            style="@style/RokiGeneralText" />
    </LinearLayout>

    <!--电烤箱菜谱-->
    <LinearLayout
        android:id="@+id/home_recipe_ll_oven"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/cookbook_oven_list" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:text="@string/home_oven_recipe_text"
            style="@style/RokiGeneralText" />
    </LinearLayout>

    <!--微波炉菜谱-->
    <LinearLayout
        android:id="@+id/home_recipe_ll_steam_oven"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/cookbook_zql_list" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:text="@string/home_steam_oven_recipe_text"
            style="@style/RokiGeneralText" />
    </LinearLayout>
</LinearLayout>

            