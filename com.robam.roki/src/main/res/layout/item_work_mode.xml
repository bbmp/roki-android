<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_112"
                android:gravity="center_horizontal"
                android:orientation="vertical">

    <TextView
        android:id="@+id/tv_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:text="模式"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/sp_14" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6">

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="强力洗"
            android:textColor="@color/text_color_device_category"
            android:textSize="@dimen/sp_24" />

        <TextView
            android:id="@+id/tv_temp_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_value"
            android:layout_marginStart="@dimen/dp_4"
            android:textColor="@color/text_color_device_category"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_2"
            android:text="℃"/>
        <TextView
            android:id="@+id/tv_time_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_value"
            android:layout_marginStart="@dimen/dp_4"
            android:textColor="@color/text_color_device_category"
            android:textSize="@dimen/sp_16"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_alignBottom="@id/tv_value"
            android:text="min"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_aux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:text="加强干燥"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/sp_12" />

</LinearLayout>