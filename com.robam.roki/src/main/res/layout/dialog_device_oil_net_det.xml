<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_500"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_dialog_bg">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_28"
        android:text="油网检测"
        android:textColor="@color/text_color_device_category"
        android:textSize="@dimen/sp_20" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_botton"
        android:layout_below="@id/tv_1"
        android:layout_marginTop="@dimen/dp_44">


        <ImageView
            android:id="@+id/iv_gif"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_300"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:src="@drawable/icon_youwang" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:visibility="gone"
                tools:text="干净"
                android:textColor="@color/text_color_device_category"
                android:textSize="@dimen/sp_32" />

            <TextView
                android:id="@+id/tv_check_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="正在为您\n检测油网的洁净度..."
                android:textColor="@color/text_color_device_category"
                android:textSize="@dimen/sp_16"
                android:visibility="visible" />
        </LinearLayout>



    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_botton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_28"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/roki_important_text_color"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="@dimen/sp_16"
            android:visibility="gone"
            android:text="重置油网"
           />

        <Button
            android:id="@+id/btn_complete"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_select_color"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:textSize="@dimen/sp_20"
            android:text="知道了"
            android:background="@drawable/countdown_complete"/>
    </LinearLayout>
</RelativeLayout>

