<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".ui.page.device.steamovenone.steamovenone920.RecipePreviewActivity">

    <include
        android:id="@+id/act_title_bar"
        layout="@layout/include_title_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_above="@+id/act_preview_start"
        android:layout_below="@+id/act_title_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/act_preview_cover_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_239"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/act_preview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/act_preview_cover_image"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_31"
                android:text="糖醋排骨"
                android:textColor="#FF333333"
                android:textSize="@dimen/sp_25"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/act_preview_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/act_preview_name">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/act_preview_device_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_16"
                    android:text="设备:"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/act_preview_device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toRightOf="@+id/act_preview_device_name_title"
                    android:text="蒸烤一体机·CQ920"
                    android:textColor="#FF515151"
                    android:textSize="@dimen/sp_14" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/act_preview_time_top"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/act_preview_device">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/act_preview_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_16"
                    android:text="时间:"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/act_preview_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toRightOf="@+id/act_preview_time_title"
                    android:text="1小时39分钟"
                    android:textColor="#FF515151" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/act_preview_material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/act_preview_time_top"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_31"
                android:layout_marginRight="@dimen/dp_16"
                android:background="#FFF3F3F3">


                <TextView
                    android:id="@+id/act_preview_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="食材"
                    android:textColor="#FF20292E"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/act_pre_material_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/act_preview_title"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_marginBottom="@dimen/dp_16" />


            </RelativeLayout>

            <TextView
                android:id="@+id/act_preview_recipe_step"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/act_preview_material"
                android:layout_marginLeft="@dimen/dp_23"
                android:layout_marginTop="@dimen/dp_34"
                android:layout_marginRight="@dimen/dp_16"
                android:text="烹饪步骤"
                android:textColor="#FF20292E"
                android:textSize="@dimen/sp_18" />

            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/act_recycle_recipe_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/act_preview_recipe_step"

                android:layout_marginTop="@dimen/dp_3"
                />



        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/act_preview_start"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="26dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:enabled="true"
        android:text="保存菜谱"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18" />
</RelativeLayout>