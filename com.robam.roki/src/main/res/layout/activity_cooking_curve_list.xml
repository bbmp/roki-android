<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_title_bar"/>

    <RelativeLayout
        android:id="@+id/act_cooking_curve_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/act_pb_cooking_list_"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView

            android:layout_below="@+id/act_pb_cooking_list_"
            android:text="加载中...."

            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_cooking_curve_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_cooking_curve_empty"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_262"
            android:src="@mipmap/icon_recipe_add_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:layout_marginTop="@dimen/dp_20"
            android:textColor="#66686C"
            android:textSize="@dimen/sp_18"
            android:layout_below="@+id/image_cooking_curve_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="暂无烹饪曲线\n快去录制吧~" />
    </RelativeLayout>
    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
        android:visibility="gone"
        android:id="@+id/page_cooking_cure_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>