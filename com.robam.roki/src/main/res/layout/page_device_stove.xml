<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="2dp">

    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgHead"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_device_header_stove" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgHead"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/imgHead"
            android:gravity="right"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="灶具"
                android:textColor="@color/c03"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Induction Hob"
                android:textColor="@color/c03"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/view_device_disconnect_hint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/device_board_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingTop="15dp"
                    android:text="为了安全，请在电磁灶上开启"
                    android:textColor="#7c7c7c"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/divStoveHead"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/divHeadLeft"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtClockLeft"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="计时"
                            android:textColor="@color/device_switch_text_color_selector"
                            android:textSize="15sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp">

                            <TextView
                                android:id="@+id/txtLevelLeft"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="P8"
                                android:textColor="@color/device_switch_text_color_selector"
                                android:textSize="36sp" />

                            <ImageView
                                android:id="@+id/imgUpLeft"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:contentDescription="@null"
                                android:padding="5dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_device_stove_level_up" />

                            <ImageView
                                android:id="@+id/imgDownLeft"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:contentDescription="@null"
                                android:padding="5dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_device_stove_level_down" />
                        </RelativeLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="30dp"
                        android:background="#484848" />

                    <LinearLayout
                        android:id="@+id/divHeadRight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/txtClockRight"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="计时"
                            android:textColor="@color/device_switch_text_color_selector"
                            android:textSize="15sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp">

                            <TextView
                                android:id="@+id/txtLevelRight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="P8"
                                android:textColor="@color/device_switch_text_color_selector"
                                android:textSize="36sp" />

                            <ImageView
                                android:id="@+id/imgUpRight"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:contentDescription="@null"
                                android:padding="5dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_device_stove_level_up" />

                            <ImageView
                                android:id="@+id/imgDownRight"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:contentDescription="@null"
                                android:padding="5dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_device_stove_level_down" />
                        </RelativeLayout>


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


            <RelativeLayout
                android:id="@+id/divLock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/device_board_translucent"
                android:visibility="gone">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:padding="2dp"
                    android:src="@mipmap/ic_device_stove_corner_1" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:padding="2dp"
                    android:src="@mipmap/ic_device_stove_corner_2" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:padding="2dp"
                    android:src="@mipmap/ic_device_stove_corner_3" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:padding="2dp"
                    android:src="@mipmap/ic_device_stove_corner_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="童锁已开启\n其它按键已被锁住\n不能操作。"
                    android:textColor="#e52f0c"
                    android:textSize="24sp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/txtHint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="为了安全\n请在灶具上开启"
                android:textColor="#e52f0c"
                android:textSize="24sp"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/imgLock"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/divHint"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_device_stove_lock" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/divPower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <com.robam.roki.ui.view.DeviceSwitchView
                android:id="@+id/powerLeftView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


            <com.robam.roki.ui.view.DeviceSwitchView
                android:id="@+id/powerRightView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tempreture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="防止小朋友操作，离开时可开启童锁！"
            android:textColor="@color/c03"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="*开启童锁，其它按键将被锁住，不能操作！"
            android:textColor="@color/c03"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>