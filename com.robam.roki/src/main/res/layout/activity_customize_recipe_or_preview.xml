<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:background="@color/mine_white_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.page.device.steamovenone.steamovenone920.CustomizeRecipeOrPreviewActivity">

    <include
        android:background="@color/mine_white_background"
        layout="@layout/include_title_bar"/>

    <ScrollView
        android:background="@color/mine_white_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/mine_white_background"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <com.robam.roki.ui.page.device.steamovenone.steamovenone920.widget.ChooseAlbumPhotoView
        android:id="@+id/act_customize_recipe_view"
        android:layout_margin="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_223"/>

    <RelativeLayout
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/shape_recipe_name_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/act_recipe_must_have"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_83"
            android:src="@mipmap/icon_must_have" />

        <EditText
            android:id="@+id/act_customize_recipe_et"
            android:layout_width="@dimen/dp_187"
            android:layout_height="@dimen/dp_42"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_toRightOf="@+id/act_recipe_must_have"
            android:background="@null"
            android:gravity="center"
            android:hint="添加菜谱名称"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/text_color_device"
            android:textColorHint="#FFE2E2E2"
            android:textStyle="bold" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/mine_white_background"
        android:layout_height="@dimen/dp_5"/>
    <com.robam.roki.ui.page.device.steamovenone.steamovenone920.widget.ItemCustomizeRecipeView
        android:id="@+id/act_customize_material"
        app:recipe_type="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:background="@color/mine_white_background"
        android:layout_height="@dimen/dp_5"/>

    <com.robam.roki.ui.page.device.steamovenone.steamovenone920.widget.ItemCustomizeRecipeView
        app:recipe_type="1"
        android:id="@+id/act_customize_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:background="@color/mine_white_background"
        android:layout_height="@dimen/dp_5"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:text="烹饪设备"
                    android:textColor="@color/text_color_device"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/act_customize_device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_28"
                    android:src="@mipmap/add"

                    android:text="蒸烤一体机·920"
                    android:textColor="@color/text_color_device"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
            android:layout_width="match_parent"
            android:background="@color/mine_white_background"
            android:layout_height="@dimen/dp_5"/>
        <RelativeLayout
            android:id="@+id/act_recipe_cook_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52">

            <ImageView
                android:id="@+id/icon_must_have_record"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_11"
                android:src="@mipmap/icon_must_have" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_25"
                android:text="烹饪记录"
                android:textColor="@color/text_color_device"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/text_color_device"
                android:id="@+id/act_step_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_toLeftOf="@+id/act_customize_image"
                android:text="" />

            <ImageView
                android:id="@+id/act_customize_image"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_28"
                android:src="@mipmap/more__3x" />
        </RelativeLayout>
            <TextView
                android:textColor="@color/text_color_device"
                android:textSize="@dimen/sp_12"
                android:background="@color/mine_white_background"
                android:paddingTop="@dimen/dp_7"
                android:paddingLeft="@dimen/dp_24"
                android:text="带*为必填项"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/mine_white_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"/>
        <RelativeLayout
            android:background="@color/mine_white_background"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton

                android:visibility="gone"
                android:id="@+id/act_customize_preview"
                style="@style/ButtonStyle"

                android:layout_width="@dimen/dp_104"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="26dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_45"
                android:enabled="false"
                android:text="预览"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />

            <Button
                android:id="@+id/act_save_recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_36"
                android:background="@drawable/countdown_complete"
                android:text="保存菜谱"
                android:textColor="@color/text_select_color"
                android:textSize="@dimen/sp_20" />
        </RelativeLayout>
            <View
                android:background="@color/mine_white_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>