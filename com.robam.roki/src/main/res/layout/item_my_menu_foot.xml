<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_8"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_recipe_bg">

    <LinearLayout
        android:id="@+id/ll_add_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:scaleType="centerCrop"
        android:padding="@dimen/dp_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        app:riv_right_top_corner_radius="@dimen/dp_10"
        app:riv_left_top_corner_radius="@dimen/dp_10"
        android:orientation="horizontal"
        android:gravity="center">
        <com.legent.ui.ext.views.RoundImageView
            android:id="@+id/img_add_menu"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars"
            android:src="@mipmap/img_menu_add"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_add_menu"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginBottom="@dimen/dp_12"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:text="添加更多菜谱"
        android:maxEms="7"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        android:textColor="@color/text_color_device_category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_add_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>










