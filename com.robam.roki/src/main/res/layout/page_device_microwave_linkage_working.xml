<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <!--标题部分-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <ImageView
            android:id="@+id/microwave_working_return"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitStart"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="微波炉"
            android:textColor="@color/c03"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/microwaveM509_linkage_working_recipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="菜谱"
            android:textColor="@color/c03"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/c03">
        <!--上方联动数字-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="45dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">
            <!--1-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/mic_nw_linked_ll_1"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_gray_rectangle"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/mic_nw_linked_txt_1"
                        android:layout_width="43dp"
                        android:layout_height="33dp"
                        android:background="@drawable/shape_gray_microwave_linkage_num"
                        android:gravity="center"
                        android:text="1"
                        android:textAlignment="gravity"
                        android:textColor="@color/white"
                        android:textSize="28sp" />
                </LinearLayout>
            </RelativeLayout>
            <!--2-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/mic_nw_linked_ll_2"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_gray_rectangle"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/mic_nw_linked_txt_2"
                        android:layout_width="43dp"
                        android:layout_height="33dp"
                        android:background="@drawable/shape_gray_microwave_linkage_num"
                        android:gravity="center"
                        android:text="2"
                        android:textAlignment="gravity"
                        android:textColor="@color/white"
                        android:textSize="28sp" />
                </LinearLayout>

            </RelativeLayout>
            <!--3-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/mic_nw_linked_ll_3"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_gray_rectangle"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/mic_nw_linked_txt_3"
                        android:layout_width="43dp"
                        android:layout_height="33dp"
                        android:background="@drawable/shape_gray_microwave_linkage_num"
                        android:gravity="center"
                        android:text="3"
                        android:textAlignment="gravity"
                        android:textColor="@color/white"
                        android:textSize="28sp" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <!--中间图标-->
        <ImageView
            android:id="@+id/mic_nw_linked_rotate_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36dp"
            android:scaleType="centerInside"
            android:src="@mipmap/img_order_run" />
        <!--中间圆圈部分-->
        <LinearLayout
            android:id="@+id/mic_nw_linked_middle_ll"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mic_nw_linked_middle_ll_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_device_microwave_normal_working_meat_yellow"
                android:visibility="gone" />

            <TextView
                android:id="@+id/mic_nw_linked_middle_ll_worktype1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-25dp"
                android:text="再加热"
                android:textColor="#ffffff"
                android:textSize="26sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/mic_nw_linked_middle_ll_worktype2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="130dp"
                android:gravity="center"
                android:text="已完成"
                android:textColor="#e9a60f"
                android:textSize="26sp"
                android:visibility="gone" />
        </LinearLayout>
        <!--火力时间状态-->
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="45dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.65"
                android:orientation="vertical">
                <!--火力图标-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="36dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/img_device_setting_fire" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="火力"
                            android:textColor="#6a6a6c"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "
                            android:textColor="#6a6a6c"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
                <!--时间图标-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="36dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/img_device_setting_time" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="时间"
                            android:textColor="#6a6a6c"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="min"
                            android:textColor="#6a6a6c"
                            android:textSize="10sp" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mic_nw_linked_fire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/c02"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/mic_nw_linked_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="00:00"
                    android:textColor="@color/c02"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
        <!--开启/关闭-->
        <RelativeLayout
            android:id="@+id/mic_nw_linked_linSwitch"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="23dp"
            android:layout_marginRight="22dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/ic_device_oven_leanline_yellow" />

            <TextView
                android:id="@+id/mic_nw_linked_txtSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="结束"
                android:textColor="@color/c02"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_above="@id/mic_nw_linked_txtSwitch"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/ic_device_oven_started" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>