<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cook_image"
        android:layout_width="450dp"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical">
        <com.hjq.bar.TitleBar app:drawableSize="25dp"
            android:id="@+id/tb_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            app:leftIcon="@drawable/ic_baseline_expand_more"
            app:rightIcon="@drawable/ic_baseline_close"
            app:titleSize="22sp"
            app:titleColor="@color/mine_text_color"/>
        <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/button_round_selector"
            android:orientation="horizontal">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_cook_position"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cook_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_tishi"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_tishi"
                android:layout_height="30dp"/>
            <ImageView
                android:id="@+id/iv_fangxiang"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_fangxiang"
                android:layout_height="30dp"/>
            <ImageView
                android:id="@+id/iv_yuyin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_yuyinhuanxin"
                android:layout_height="30dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:gravity="center">
                <CheckBox
                    android:id="@+id/cb_yinliang"
                    android:layout_width="wrap_content"
                    android:button="@drawable/checkbox_yinliang"
                    android:checked="true"
                    android:layout_height="30dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
