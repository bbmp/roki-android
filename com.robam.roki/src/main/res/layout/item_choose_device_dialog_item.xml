<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:background="@drawable/shadow"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_height="@dimen/dp_55">


    <ImageView


        android:id="@+id/item_choose_dialog_point"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_order_recipe_normal" />
    <TextView

        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_toRightOf="@+id/item_choose_dialog_point"
        android:id="@+id/item_choose_dialog_name_txt"
        android:textColor="@color/black"
        android:text="蒸烤炸一体机"
        android:textSize="@dimen/sp_18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>


    <TextView
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_toRightOf="@+id/item_choose_dialog_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_choose_dialog_device_txt"
        android:layout_below="@+id/item_choose_dialog_name_txt"
        android:text="CQ925"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_14" />

</RelativeLayout>