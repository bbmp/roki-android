<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:layout_marginBottom="10dp"    android:layout_marginLeft="10dp"    android:layout_marginRight="10dp"    android:orientation="vertical">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:background="@color/c03"        android:orientation="vertical"        android:paddingTop="18dp">        <!--模式、 温度、时间-->        <LinearLayout            android:id="@+id/temp_and_time"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal">            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1"                android:gravity="center"                android:orientation="horizontal">              <!--  <ImageView                    android:layout_width="wrap_content"                    android:layout_height="40dp"                    android:src="@mipmap/ic_device_oven_professional_temperature" />-->                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="-8dp"                    android:layout_marginTop="8dp"                    android:gravity="center"                    android:text="上温度\n°C"                    android:textSize="19sp"                    android:textColor="#ffffff" />            </LinearLayout>            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1"                android:gravity="center"                android:orientation="horizontal">             <!--   <ImageView                    android:layout_width="wrap_content"                    android:layout_height="40dp"                    android:src="@mipmap/ic_device_oven_professional_temperature" />-->                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="-8dp"                    android:layout_marginTop="8dp"                    android:gravity="center"                    android:text="下温度\n°C"                    android:textSize="19sp"                    android:textColor="#ffffff" />            </LinearLayout>            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1"                android:gravity="center"                android:orientation="horizontal"><!--                <ImageView                    android:layout_width="wrap_content"                    android:layout_height="40dp"                    android:src="@mipmap/ic_device_oven_professional_setting_time" />-->                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="-8dp"                    android:layout_marginTop="8dp"                    android:gravity="center"                    android:text="时间\nmin"                    android:textSize="19sp"                    android:textColor="#ffffff" />            </LinearLayout>        </LinearLayout>        <View            android:id="@+id/temp_line"            android:layout_below="@id/temp_and_time"            android:layout_width="match_parent"            android:layout_height="1px"            android:layout_marginLeft="15dp"            android:layout_marginRight="15dp"            android:layout_marginTop="10dp"            android:background="@color/c01" />        <LinearLayout            android:id="@+id/wheelView"            android:layout_below="@id/temp_line"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal">            <LinearLayout                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="1"                android:gravity="center_horizontal"                android:orientation="vertical">                <com.robam.roki.ui.view.DeviceNumWheel                    android:id="@+id/wv1"                    style="@style/wheel_Oven_view_style"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />            </LinearLayout>            <LinearLayout                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="1"                android:gravity="center_horizontal"                android:orientation="vertical">                <com.robam.roki.ui.view.DeviceNumWheel                    android:id="@+id/wv2"                    style="@style/wheel_Oven_view_style"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />            </LinearLayout>            <LinearLayout                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="1"                android:gravity="center_horizontal"                android:orientation="vertical">                <com.robam.roki.ui.view.DeviceNumWheel                    android:id="@+id/wv3"                    style="@style/wheel_Oven_view_style"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />            </LinearLayout>        </LinearLayout>        <!--文本描述-->        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_alignParentBottom="true"            >            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="EXP:该功能可自行控制上下层加热温度，满足客户多样化烘烤及口感。"                android:textColor="@color/c01"                android:padding="5dp"                />        </LinearLayout>    </RelativeLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content">        <TextView            android:id="@+id/btnorder"            android:layout_width="0dp"            android:layout_height="66dp"            android:layout_marginTop="10dp"            android:layout_weight="1"            android:background="#e9a60f"            android:gravity="center"            android:text="预约"            android:textColor="#ffffff"            android:textSize="28sp"            />        <TextView            android:id="@+id/btnConfirm"            android:layout_width="0dp"            android:layout_height="66dp"            android:layout_marginLeft="7dp"            android:layout_marginTop="10dp"            android:layout_weight="1"            android:background="#e9a60f"            android:gravity="center"            android:text="开始烹饪"            android:textColor="#ffffff"            android:textSize="28sp"            />        <TextView            android:id="@+id/btn028"            android:layout_width="0dp"            android:layout_height="66dp"            android:layout_marginTop="10dp"            android:layout_weight="1"            android:background="#e9a60f"            android:gravity="center"            android:text="开始"            android:textColor="#ffffff"            android:textSize="28sp"            android:visibility="gone"            />    </LinearLayout></LinearLayout>