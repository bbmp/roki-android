<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:fitsSystemWindows="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg_main"
    tools:context=".ui.activity3.recipedetail.ProductDetailActivity">

    <View
        android:id="@+id/status_bar_fix"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/transparent" />
    <include
        android:id="@+id/act_title_bar"
        android:layout_height="@dimen/dp_44"
        android:layout_width="match_parent"
        android:layout_below="@id/status_bar_fix"
        layout="@layout/include_title_bar" />


    <TextView
        android:layout_marginRight="@dimen/dp_16"
        android:id="@+id/act_product_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/act_title_bar"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:text="真的挺好吃的，大家快来试试啊！"
        android:textColor="@color/text_color_net_err"
        android:textSize="@dimen/sp_16" />


    <TextView
        android:textSize="@dimen/sp_10"
        android:id="@+id/act_product_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/act_product_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_7"
        android:text="2021-10-25"
        android:textColor="@color/text_color_touch_retry" />

    <com.robam.roki.ui.view.nineview.NineCookedView
        android:id="@+id/act_product_nine"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@+id/act_product_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/act_product_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_below="@+id/act_product_nine"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/shape_button_bg"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:text="#红烧豆腐"
        android:textColor="@color/text_color_exit_login"
        android:textSize="@dimen/sp_12" />

    <ImageView
        android:id="@+id/image_product_has_thumbs_up"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_below="@+id/act_product_name"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/select_thumbs_up_publish" />

    <TextView
        android:id="@+id/image_product_has_thumbs_up_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/act_product_name"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_toRightOf="@+id/image_product_has_thumbs_up"
        android:text="23"
        android:textColor="@color/text_color_net_err"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>