<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".ui.page.UserCancelAccountPage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_cancel_settting_back"
            android:layout_width="45dp"
            android:layout_height="31dp"
            android:paddingStart="20dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:src="@drawable/ic_return_selector_01" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="45dp"
            android:text="@string/my_cancel_account"
            android:textColor="@color/black"
            android:textSize="18sp"/>
    </LinearLayout>
    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="#dbdbdb"/>

    <TextView

        android:layout_width="match_parent"
        android:text="亲爱的ROKI用户："
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_gravity="start"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="感谢您一直以来的陪伴，注销账户后，ROKI将无法继\n续为您提供以下服务："
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="1、账户中的设备信息等将被全部清空且无法恢复\n2、账户中的菜谱将被全部清空且无法恢复\n3、账户中的使用记录、厨艺分享等内容将被全部清空且无法恢复"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="申请注销表示您自愿永久放弃账户内所有虚拟资产，不可恢复，请您谨慎操作。" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_accout_log_off"
            style="@style/common_button"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_marginBottom="50dp"
            android:background="#33f41f1f"
            android:textColor="@color/white"
            android:text="申请注销" />

    </RelativeLayout>
</LinearLayout>