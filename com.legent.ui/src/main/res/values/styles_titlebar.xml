<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="titlebar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:actionBarSize</item>
        <item name="android:paddingLeft">@dimen/titlebar_padding_left</item>
        <item name="android:paddingRight">@dimen/titlebar_padding_right</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="titlebar_divider_style">
        <item name="android:background">@color/common_divide_background</item>
        <item name="android:layout_height">@dimen/titlebar_divider_height</item>
        <item name="android:visibility">gone</item>
    </style>
    -<style name="setting_titlebar_divider_style">
    <item name="android:background">@color/common_setting_divide_background</item>
    <item name="android:layout_height">@dimen/titlebar_divider_height</item>
</style>
    <style name="titlebar_icon_style">
        <item name="android:layout_width">?android:actionBarSize</item>
        <item name="android:layout_height">?android:actionBarSize</item>
        <item name="android:background">@drawable/common_view_background_selector</item>
        <item name="android:paddingTop">@dimen/titlebar_icon_padding_top</item>
        <item name="android:paddingBottom">@dimen/titlebar_icon_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/titlebar_icon_padding_left</item>
        <item name="android:paddingRight">@dimen/titlebar_icon_padding_right</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="titlebar_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">?android:actionBarSize</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/common_view_background_selector</item>
        <item name="android:textColor">@color/titlebar_text_color_selector</item>
        <item name="android:textSize">@dimen/titlebar_text_text_size</item>
        <item name="android:ellipsize">none</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/titlebar_text_padding_left</item>
        <item name="android:paddingRight">@dimen/titlebar_text_padding_right</item>
    </style>

    <style name="titlebar_title_style" parent="@style/titlebar_text_style">
        <item name="android:textColor">@color/titlebar_title_color_selector</item>
        <item name="android:textSize">@dimen/titlebar_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="setting_titlebar_title_style" parent="@style/titlebar_text_style">
        <item name="android:textColor">#6c6c6c</item>
        <item name="android:textSize">@dimen/titlebar_title_text_size</item>
        <item name="android:clickable">false</item>
    </style>

</resources>