<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_titlebar"
        style="@style/titlebar_style">

        <RelativeLayout
            android:id="@+id/pnlMiddle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="80dp"
            android:paddingRight="80dp">

            <TextView
                android:id="@+id/txtTitle"
                style="@style/setting_titlebar_title_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="标题" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/pnlLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical|left"
            android:orientation="horizontal">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/pnlRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        style="@style/setting_titlebar_divider_style"
        android:layout_width="match_parent"
        android:visibility="gone" />

</LinearLayout>